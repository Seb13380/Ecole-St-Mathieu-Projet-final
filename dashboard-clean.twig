{% extends "layouts/base.twig" %}

{% block main %}
	<div class="min-h-screen bg-gradient-to-br from-slate-50 to-blue-50">
		<div
			class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8 py-8">

			<!-- En-tête moderne -->
			<div class="mb-8">
				<div class="bg-white rounded-2xl shadow-sm border border-slate-200 p-8">
					<div class="flex items-center justify-between">
						<div>
							<h1 class="text-4xl font-bold text-slate-800 mb-2">
								🏫 Direction de l'École
							</h1>
							<p class="text-xl text-slate-600">
								Bienvenue,
								<span class="font-semibold text-blue-600">{{ user.firstName }}
									{{ user.lastName }}</span>
							</p>
							<p class="text-sm text-slate-500 mt-1">Directeur de l'École Saint-Mathieu</p>
						</div>
						<div class="hidden md:block">
							<div class="text-right">
								<div class="text-3xl mb-2">📊</div>
								<p class="text-sm text-slate-500">Tableau de bord</p>
							</div>
						</div>
					</div>
				</div>
			</div>

			<!-- Statistiques principales -->
			<div class="grid grid-cols-1 md:grid-cols-2 xl:grid-cols-3 gap-6 mb-8">
				<div class="bg-white rounded-xl shadow-sm border border-slate-200 p-6 hover:shadow-md transition-all duration-200">
					<div class="flex items-center space-x-4">
						<div class="bg-blue-100 rounded-xl p-3">
							<svg class="h-8 w-8 text-blue-600" fill="none" viewbox="0 0 24 24" stroke="currentColor">
								<path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 4.354a4 4 0 110 5.292M15 21H3v-1a6 6 0 0112 0v1zm0 0h6v-1a6 6 0 00-9-5.197m13.5-9a2.5 2.5 0 11-5 0 2.5 2.5 0 015 0z"/>
							</svg>
						</div>
						<div>
							<p class="text-sm font-medium text-slate-500">Personnel Total</p>
							<p class="text-3xl font-bold text-slate-800">{{ stats.totalUsers }}</p>
							<p class="text-xs text-green-600">👥 Actifs</p>
						</div>
					</div>
				</div>

				<div class="bg-white rounded-xl shadow-sm border border-slate-200 p-6 hover:shadow-md transition-all duration-200">
					<div class="flex items-center space-x-4">
						<div class="bg-green-100 rounded-xl p-3">
							<svg class="h-8 w-8 text-green-600" fill="none" viewbox="0 0 24 24" stroke="currentColor">
								<path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M16 7a4 4 0 11-8 0 4 4 0 018 0zM12 14a7 7 0 00-7 7h14a7 7 0 00-7-7z"/>
							</svg>
						</div>
						<div>
							<p class="text-sm font-medium text-slate-500">Élèves Inscrits</p>
							<p class="text-3xl font-bold text-slate-800">{{ stats.totalStudents }}</p>
							<p class="text-xs text-green-600">👶 Scolarisés</p>
						</div>
					</div>
				</div>

				<div class="bg-white rounded-xl shadow-sm border border-slate-200 p-6 hover:shadow-md transition-all duration-200">
					<div class="flex items-center space-x-4">
						<div class="bg-amber-100 rounded-xl p-3">
							<svg class="h-8 w-8 text-amber-600" fill="none" viewbox="0 0 24 24" stroke="currentColor">
								<path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M19 21V5a2 2 0 00-2-2H7a2 2 0 00-2 2v16m14 0h2m-2 0h-5m-9 0H3m2 0h5M9 7h1m-1 4h1m4-4h1m-1 4h1m-5 10v-5a1 1 0 011-1h2a1 1 0 011 1v5m-4 0h4"/>
							</svg>
						</div>
						<div>
							<p class="text-sm font-medium text-slate-500">Classes Actives</p>
							<p class="text-3xl font-bold text-slate-800">{{ stats.totalClasses }}</p>
							<p class="text-xs text-green-600">🏫 Organisées</p>
						</div>
					</div>
				</div>

				<div class="bg-white rounded-xl shadow-sm border border-slate-200 p-6 hover:shadow-md transition-all duration-200">
					<div class="flex items-center space-x-4">
						<div class="bg-purple-100 rounded-xl p-3">
							<svg class="h-8 w-8 text-purple-600" fill="none" viewbox="0 0 24 24" stroke="currentColor">
								<path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M8 12h.01M12 12h.01M16 12h.01M21 12c0 4.418-4.03 8-9 8a9.863 9.863 0 01-4.255-.949L3 20l1.395-3.72C3.512 15.042 3 13.574 3 12c0-4.418 4.03-8 9-8s9 3.582 9 8z"/>
							</svg>
						</div>
						<div>
							<p class="text-sm font-medium text-slate-500">Messages</p>
							<p class="text-3xl font-bold text-slate-800">{{ stats.totalMessages }}</p>
							<p class="text-xs text-blue-600">💬 Communications</p>
						</div>
					</div>
				</div>

				<div class="bg-white rounded-xl shadow-sm border border-slate-200 p-6 hover:shadow-md transition-all duration-200">
					<div class="flex items-center space-x-4">
						<div class="bg-red-100 rounded-xl p-3">
							<svg class="h-8 w-8 text-red-600" fill="none" viewbox="0 0 24 24" stroke="currentColor">
								<path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M11 5.882V19.24a1.76 1.76 0 01-3.417.592l-2.147-6.15M18 13a3 3 0 100-6M5.436 13.683A4.001 4.001 0 017 6h1.832c4.1 0 7.625-1.234 9.168-3v14c-1.543-1.766-5.067-3-9.168-3H7a3.988 3.988 0 01-1.564-.317z"/>
							</svg>
						</div>
						<div>
							<p class="text-sm font-medium text-slate-500">Actualités</p>
							<p class="text-3xl font-bold text-slate-800">{{ stats.totalActualites }}</p>
							<p class="text-xs text-red-600">📢 Publiées</p>
						</div>
					</div>
				</div>
			</div>

			<!-- Actions de direction -->
			<div class="mb-8">
				<h2 class="text-2xl font-bold text-slate-800 mb-6 flex items-center">
					<span class="mr-3">⚡</span>
					Actions de Direction
				</h2>

				<div class="grid grid-cols-1 md:grid-cols-2 xl:grid-cols-3 gap-6">
					<a href="/parent-invitations/manage" class="group bg-white rounded-xl shadow-sm border border-slate-200 p-6 hover:shadow-lg hover:border-teal-300 transition-all duration-300">
						<div class="flex items-start justify-between mb-4">
							<div class="bg-teal-100 rounded-xl p-3 group-hover:bg-teal-200 transition-colors">
								<svg class="h-8 w-8 text-teal-600" fill="none" viewbox="0 0 24 24" stroke="currentColor">
									<path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M3 8l7.89 7.89a2 2 0 002.83 0L21 8M5 19h14a2 2 0 002-2V7a2 2 0 00-2-2H5a2 2 0 00-2 2v10a2 2 0 002 2z"/>
								</svg>
							</div>
							<div class="opacity-0 group-hover:opacity-100 transition-opacity">
								<svg class="h-6 w-6 text-slate-400" fill="none" viewbox="0 0 24 24" stroke="currentColor">
									<path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 5l7 7-7 7"/>
								</svg>
							</div>
						</div>
						<h3 class="text-xl font-bold text-slate-800 mb-2">Invitations Parents</h3>
						<p class="text-slate-600 mb-4">Inviter de nouveaux parents par email</p>
						<div class="flex items-center text-sm text-teal-600 font-medium">
							<span>Gérer les invitations</span>
						</div>
					</a>

					<a href="/admin/users" class="group bg-white rounded-xl shadow-sm border border-slate-200 p-6 hover:shadow-lg hover:border-blue-300 transition-all duration-300">
						<div class="flex items-start justify-between mb-4">
							<div class="bg-blue-100 rounded-xl p-3 group-hover:bg-blue-200 transition-colors">
								<svg class="h-8 w-8 text-blue-600" fill="none" viewbox="0 0 24 24" stroke="currentColor">
									<path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M17 20h5v-2a3 3 0 00-5.356-1.857M17 20H7m10 0v-2c0-.656-.126-1.283-.356-1.857M7 20H2v-2a3 3 0 015.356-1.857M7 20v-2c0-.656.126-1.283.356-1.857m0 0a5.002 5.002 0 019.288 0M15 7a3 3 0 11-6 0 3 3 0 016 0zm6 3a2 2 0 11-4 0 2 2 0 014 0zM7 10a2 2 0 11-4 0 2 2 0 014 0z"/>
								</svg>
							</div>
							<div class="opacity-0 group-hover:opacity-100 transition-opacity">
								<svg class="h-6 w-6 text-slate-400" fill="none" viewbox="0 0 24 24" stroke="currentColor">
									<path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 5l7 7-7 7"/>
								</svg>
							</div>
						</div>
						<h3 class="text-xl font-bold text-slate-800 mb-2">Gestion du Personnel</h3>
						<p class="text-slate-600 mb-4">Enseignants et administration</p>
						<div class="flex items-center text-sm text-blue-600 font-medium">
							<span>Gérer le personnel</span>
						</div>
					</a>

					<a href="/admin/students" class="group bg-white rounded-xl shadow-sm border border-slate-200 p-6 hover:shadow-lg hover:border-green-300 transition-all duration-300">
						<div class="flex items-start justify-between mb-4">
							<div class="bg-green-100 rounded-xl p-3 group-hover:bg-green-200 transition-colors">
								<svg class="h-8 w-8 text-green-600" fill="none" viewbox="0 0 24 24" stroke="currentColor">
									<path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 6.253v13m0-13C10.832 5.477 9.246 5 7.5 5S4.168 5.477 3 6.253v13C4.168 18.477 5.754 18 7.5 18s3.332.477 4.5 1.253m0-13C13.168 5.477 14.754 5 16.5 5c1.747 0 3.332.477 4.5 1.253v13C19.832 18.477 18.247 18 16.5 18c-1.746 0-3.332.477-4.5 1.253"/>
								</svg>
							</div>
							<div class="opacity-0 group-hover:opacity-100 transition-opacity">
								<svg class="h-6 w-6 text-slate-400" fill="none" viewbox="0 0 24 24" stroke="currentColor">
									<path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 5l7 7-7 7"/>
								</svg>
							</div>
						</div>
						<h3 class="text-xl font-bold text-slate-800 mb-2">Suivi Pédagogique</h3>
						<p class="text-slate-600 mb-4">Élèves et résultats scolaires</p>
						<div class="flex items-center text-sm text-green-600 font-medium">
							<span>Suivre les élèves</span>
						</div>
					</a>

					<a href="/admin/classes" class="group bg-white rounded-xl shadow-sm border border-slate-200 p-6 hover:shadow-lg hover:border-amber-300 transition-all duration-300">
						<div class="flex items-start justify-between mb-4">
							<div class="bg-amber-100 rounded-xl p-3 group-hover:bg-amber-200 transition-colors">
								<svg class="h-8 w-8 text-amber-600" fill="none" viewbox="0 0 24 24" stroke="currentColor">
									<path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M19 21V5a2 2 0 00-2-2H7a2 2 0 00-2 2v16m14 0h2m-2 0h-5m-9 0H3m2 0h5M9 7h1m-1 4h1m4-4h1m-1 4h1m-5 10v-5a1 1 0 011-1h2a1 1 0 011 1v5m-4 0h4"/>
								</svg>
							</div>
							<div class="opacity-0 group-hover:opacity-100 transition-opacity">
								<svg class="h-6 w-6 text-slate-400" fill="none" viewbox="0 0 24 24" stroke="currentColor">
									<path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 5l7 7-7 7"/>
								</svg>
							</div>
						</div>
						<h3 class="text-xl font-bold text-slate-800 mb-2">Organisation Scolaire</h3>
						<p class="text-slate-600 mb-4">Classes et emplois du temps</p>
						<div class="flex items-center text-sm text-amber-600 font-medium">
							<span>Organiser les classes</span>
						</div>
					</a>

					<a href="/actualites/manage" class="group bg-white rounded-xl shadow-sm border border-slate-200 p-6 hover:shadow-lg hover:border-red-300 transition-all duration-300">
						<div class="flex items-start justify-between mb-4">
							<div class="bg-red-100 rounded-xl p-3 group-hover:bg-red-200 transition-colors">
								<svg class="h-8 w-8 text-red-600" fill="none" viewbox="0 0 24 24" stroke="currentColor">
									<path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15.232 5.232l3.536 3.536m-2.036-5.036a2.5 2.5 0 113.536 3.536L6.5 21.036H3v-3.572L16.732 3.732z"/>
								</svg>
							</div>
							<div class="opacity-0 group-hover:opacity-100 transition-opacity">
								<svg class="h-6 w-6 text-slate-400" fill="none" viewbox="0 0 24 24" stroke="currentColor">
									<path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 5l7 7-7 7"/>
								</svg>
							</div>
						</div>
						<h3 class="text-xl font-bold text-slate-800 mb-2">Communication</h3>
						<p class="text-slate-600 mb-4">Actualités et annonces</p>
						<div class="flex items-center text-sm text-red-600 font-medium">
							<span>Gérer la communication</span>
						</div>
					</a>

					<a href="/admin/menus-pdf" class="group bg-white rounded-xl shadow-sm border border-slate-200 p-6 hover:shadow-lg hover:border-orange-300 transition-all duration-300">
						<div class="flex items-start justify-between mb-4">
							<div class="bg-orange-100 rounded-xl p-3 group-hover:bg-orange-200 transition-colors">
								<svg class="h-8 w-8 text-orange-600" fill="none" viewbox="0 0 24 24" stroke="currentColor">
									<path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 12h6m-6 4h6m2 5H7a2 2 0 01-2-2V5a2 2 0 012-2h5.586a1 1 0 01.707.293l5.414 5.414a1 1 0 01.293.707V19a2 2 0 01-2 2z"/>
								</svg>
							</div>
							<div class="opacity-0 group-hover:opacity-100 transition-opacity">
								<svg class="h-6 w-6 text-slate-400" fill="none" viewbox="0 0 24 24" stroke="currentColor">
									<path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 5l7 7-7 7"/>
								</svg>
							</div>
						</div>
						<h3 class="text-xl font-bold text-slate-800 mb-2">Gestion des Menus</h3>
						<p class="text-slate-600 mb-4">Menus de la cantine</p>
						<div class="flex items-center text-sm text-orange-600 font-medium">
							<span>Gérer les menus</span>
						</div>
					</a>
				</div>
			</div>

			<!-- Outils supplémentaires -->
			<div class="mb-8">
				<h2 class="text-2xl font-bold text-slate-800 mb-6 flex items-center">
					<span class="mr-3">🔧</span>
					Outils & Services
				</h2>

				<div class="grid grid-cols-1 md:grid-cols-2 xl:grid-cols-4 gap-6">
					<a href="/admin/contact-messages" class="group bg-white rounded-xl shadow-sm border border-slate-200 p-6 hover:shadow-lg hover:border-purple-300 transition-all duration-300">
						<div class="bg-purple-100 rounded-xl p-3 group-hover:bg-purple-200 transition-colors mb-4">
							<svg class="h-8 w-8 text-purple-600" fill="none" viewbox="0 0 24 24" stroke="currentColor">
								<path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M3 8l7.89 4.26a2 2 0 002.22 0L21 8M5 19h14a2 2 0 002-2V7a2 2 0 00-2-2H5a2 2 0 00-2 2v10a2 2 0 002 2z"/>
							</svg>
						</div>
						<h3 class="text-lg font-bold text-slate-800 mb-2">Messages Parents</h3>
						<p class="text-slate-600 text-sm">Contact et demandes</p>
					</a>

					<a href="/admin/reports" class="group bg-white rounded-xl shadow-sm border border-slate-200 p-6 hover:shadow-lg hover:border-indigo-300 transition-all duration-300">
						<div class="bg-indigo-100 rounded-xl p-3 group-hover:bg-indigo-200 transition-colors mb-4">
							<svg class="h-8 w-8 text-indigo-600" fill="none" viewbox="0 0 24 24" stroke="currentColor">
								<path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 19v-6a2 2 0 00-2-2H5a2 2 0 00-2 2v6a2 2 0 002 2h2a2 2 0 002-2zm0 0V9a2 2 0 012-2h2a2 2 0 012 2v10m-6 0a2 2 0 002 2h2a2 2 0 002-2m0 0V5a2 2 0 012-2h2a2 2 0 012 2v14a2 2 0 01-2 2h-2a2 2 0 01-2-2z"/>
							</svg>
						</div>
						<h3 class="text-lg font-bold text-slate-800 mb-2">Rapports</h3>
						<p class="text-slate-600 text-sm">Statistiques et bilans</p>
					</a>

					<a href="/admin/settings" class="group bg-white rounded-xl shadow-sm border border-slate-200 p-6 hover:shadow-lg hover:border-gray-300 transition-all duration-300">
						<div class="bg-gray-100 rounded-xl p-3 group-hover:bg-gray-200 transition-colors mb-4">
							<svg class="h-8 w-8 text-gray-600" fill="none" viewbox="0 0 24 24" stroke="currentColor">
								<path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M10.325 4.317c.426-1.756 2.924-1.756 3.35 0a1.724 1.724 0 002.573 1.066c1.543-.94 3.31.826 2.37 2.37a1.724 1.724 0 001.065 2.572c1.756.426 1.756 2.924 0 3.35a1.724 1.724 0 00-1.066 2.573c.94 1.543-.826 3.31-2.37 2.37a1.724 1.724 0 00-2.572 1.065c-.426 1.756-2.924 1.756-3.35 0a1.724 1.724 0 00-2.573-1.066c-1.543.94-3.31-.826-2.37-2.37a1.724 1.724 0 00-1.065-2.572c-1.756-.426-1.756-2.924 0-3.35a1.724 1.724 0 001.066-2.573c-.94-1.543.826-3.31 2.37-2.37.996.608 2.296.07 2.572-1.065z"/>
								<path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15 12a3 3 0 11-6 0 3 3 0 016 0z"/>
							</svg>
						</div>
						<h3 class="text-lg font-bold text-slate-800 mb-2">Paramètres</h3>
						<p class="text-slate-600 text-sm">Configuration générale</p>
					</a>

					<a href="/profile" class="group bg-white rounded-xl shadow-sm border border-slate-200 p-6 hover:shadow-lg hover:border-slate-300 transition-all duration-300">
						<div class="bg-slate-100 rounded-xl p-3 group-hover:bg-slate-200 transition-colors mb-4">
							<svg class="h-8 w-8 text-slate-600" fill="none" viewbox="0 0 24 24" stroke="currentColor">
								<path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M16 7a4 4 0 11-8 0 4 4 0 018 0zM12 14a7 7 0 00-7 7h14a7 7 0 00-7-7z"/>
							</svg>
						</div>
						<h3 class="text-lg font-bold text-slate-800 mb-2">Mon Profil</h3>
						<p class="text-slate-600 text-sm">Informations personnelles</p>
					</a>
				</div>
			</div>

			<!-- Informations Récentes -->
			<div class="grid grid-cols-1 lg:grid-cols-2 gap-8">
				{% if recentUsers|length > 0 %}
					<div class="bg-white rounded-xl shadow-sm border border-slate-200 p-6">
						<div class="flex items-center justify-between mb-6">
							<h2 class="text-xl font-bold text-slate-800 flex items-center">
								<span class="mr-3">👥</span>
								Nouveaux Utilisateurs
							</h2>
							<a href="/admin/users" class="text-blue-600 hover:text-blue-800 text-sm font-medium">
								Voir tous →
							</a>
						</div>
						<div class="space-y-4">
							{% for user in recentUsers %}
								<div class="flex items-center justify-between p-4 bg-slate-50 rounded-lg">
									<div>
										<p class="font-medium text-slate-800">{{ user.firstName }}
											{{ user.lastName }}</p>
										<p class="text-sm text-slate-600">{{ user.email }}</p>
									</div>
									<div class="text-right">
										<span class="inline-flex items-center px-2.5 py-0.5 rounded-full text-xs font-medium bg-blue-100 text-blue-800">
											{{ user.role }}
										</span>
										<p class="text-xs text-slate-500 mt-1">{{ user.createdAt|date('d/m/Y') }}</p>
									</div>
								</div>
							{% endfor %}
						</div>
					</div>
				{% endif %}

				{% if recentMessages|length > 0 %}
					<div class="bg-white rounded-xl shadow-sm border border-slate-200 p-6">
						<div class="flex items-center justify-between mb-6">
							<h2 class="text-xl font-bold text-slate-800 flex items-center">
								<span class="mr-3">📧</span>
								Messages Récents
							</h2>
							<a href="/admin/contact-messages" class="text-purple-600 hover:text-purple-800 text-sm font-medium">
								Voir tous →
							</a>
						</div>
						<div class="space-y-4">
							{% for message in recentMessages %}
								<div class="flex items-start justify-between p-4 bg-slate-50 rounded-lg">
									<div class="flex-1">
										<p class="font-medium text-slate-800">{{ message.nom }}</p>
										<p class="text-sm text-slate-600 mb-1">{{ message.sujet }}</p>
										<p class="text-xs text-slate-500">{{ message.email }}</p>
									</div>
									<div class="text-right ml-4">
										<span class="inline-flex items-center px-2 py-1 rounded-full text-xs font-medium bg-red-100 text-red-800">
