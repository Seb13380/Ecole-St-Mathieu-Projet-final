{% extends "layouts/base.twig" %}

{% block title %}Gestion des Travaux - École Saint-Mathieu
{% endblock %}

{% block main %}
	<div class="min-h-screen bg-gradient-to-br from-blue-50 to-indigo-100 p-8">
		<div
			class="max-w-7xl mx-auto">
			<!-- Header Section -->
			<div class="text-center mb-8">
				<h1 class="text-4xl font-bold text-slate-800 mb-4">
					<span class="mr-3">🔨</span>
					Gestion des Travaux
				</h1>
				<p class="text-slate-600">Gérez les travaux et projets qui s'affichent sur la page d'accueil du site</p>
			</div>

			<!-- Messages -->
			{% if success %}
				<div class="max-w-4xl mx-auto mb-6">
					<div class="bg-green-50 border border-green-200 text-green-700 px-4 py-3 rounded-lg">
						<div class="flex items-center">
							<svg class="w-5 h-5 mr-2" fill="currentColor" viewbox="0 0 20 20">
								<path fill-rule="evenodd" d="M10 18a8 8 0 100-16 8 8 0 000 16zm3.707-9.293a1 1 0 00-1.414-1.414L9 10.586 7.707 9.293a1 1 0 00-1.414 1.414l2 2a1 1 0 001.414 0l4-4z" clip-rule="evenodd"></path>
							</svg>
							{{ success }}
						</div>
					</div>
				</div>
			{% endif %}

			{% if error %}
				<div class="max-w-4xl mx-auto mb-6">
					<div class="bg-red-50 border border-red-200 text-red-700 px-4 py-3 rounded-lg">
						<div class="flex items-center">
							<svg class="w-5 h-5 mr-2" fill="currentColor" viewbox="0 0 20 20">
								<path fill-rule="evenodd" d="M10 18a8 8 0 100-16 8 8 0 000 16zM8.707 7.293a1 1 0 00-1.414 1.414L8.586 10l-1.293 1.293a1 1 0 101.414 1.414L10 11.414l1.293 1.293a1 1 0 001.414-1.414L11.414 10l1.293-1.293a1 1 0 00-1.414-1.414L10 8.586 8.707 7.293z" clip-rule="evenodd"></path>
							</svg>
							{{ error }}
						</div>
					</div>
				</div>
			{% endif %}

			<!-- Nouveaux Travaux -->
			<div class="mb-8">
				<div class="bg-white shadow-lg border-l-4 border-orange-500 p-8 max-w-4xl mx-auto">
					<h2 class="text-2xl font-bold text-slate-800 mb-6 text-center">
						<span class="mr-2">🏗️</span>
						Ajouter de Nouveaux Travaux
					</h2>

					<form action="/travaux" method="POST" class="space-y-6">
						<div class="grid grid-cols-1 md:grid-cols-2 gap-6">
							<div class="md:col-span-2">
								<label for="titre" class="block text-sm font-medium text-slate-700 mb-2">
									Titre des travaux
									<span class="text-red-500">*</span>
								</label>
								<input type="text" id="titre" name="titre" class="w-full px-4 py-3 border border-slate-300 focus:ring-2 focus:ring-orange-500 focus:border-orange-500 transition-colors" placeholder="Rénovation de la cour de récréation" required>
							</div>

							<div class="md:col-span-2">
								<label for="description" class="block text-sm font-medium text-slate-700 mb-2">
									Description des travaux
									<span class="text-red-500">*</span>
								</label>
								<textarea id="description" name="description" rows="4" class="w-full px-4 py-3 border border-slate-300 focus:ring-2 focus:ring-orange-500 focus:border-orange-500 transition-colors" placeholder="Description détaillée des travaux en cours..." required></textarea>
							</div>

							<div>
								<label for="dateDebut" class="block text-sm font-medium text-slate-700 mb-2">
									Date de début
								</label>
								<input type="date" id="dateDebut" name="dateDebut" class="w-full px-4 py-3 border border-slate-300 focus:ring-2 focus:ring-orange-500 focus:border-orange-500 transition-colors">
							</div>

							<div>
								<label for="dateFin" class="block text-sm font-medium text-slate-700 mb-2">
									Date de fin prévue
								</label>
								<input type="date" id="dateFin" name="dateFin" class="w-full px-4 py-3 border border-slate-300 focus:ring-2 focus:ring-orange-500 focus:border-orange-500 transition-colors">
							</div>

							<div>
								<label for="progression" class="block text-sm font-medium text-slate-700 mb-2">
									Progression (%)
								</label>
								<input type="number" id="progression" name="progression" min="0" max="100" value="0" class="w-full px-4 py-3 border border-slate-300 focus:ring-2 focus:ring-orange-500 focus:border-orange-500 transition-colors">
								<p class="text-xs text-slate-500 mt-1">De 0 à 100%</p>
							</div>

							<div>
								<label for="statut" class="block text-sm font-medium text-slate-700 mb-2">
									Statut des travaux
								</label>
								<select id="statut" name="statut" class="w-full px-4 py-3 border border-slate-300 focus:ring-2 focus:ring-orange-500 focus:border-orange-500 transition-colors">
									<option value="PLANIFIE">📋 Planifié</option>
									<option value="EN_COURS">🚧 En cours</option>
									<option value="TERMINE">✅ Terminé</option>
									<option value="SUSPENDU">⏸️ Suspendu</option>
								</select>
							</div>

							<div class="md:col-span-2 flex items-center space-x-6">
								<label class="flex items-center">
									<input type="checkbox" name="important" value="true" class="w-4 h-4 text-orange-600 bg-slate-100 border-slate-300 focus:ring-orange-500 focus:ring-2">
									<span class="ml-2 text-sm font-medium text-slate-700">
										🚨 Travaux importants
									</span>
								</label>

								<label class="flex items-center">
									<input type="checkbox" name="visible" value="true" checked class="w-4 h-4 text-orange-600 bg-slate-100 border-slate-300 focus:ring-orange-500 focus:ring-2">
									<span class="ml-2 text-sm font-medium text-slate-700">
										👁️ Visible sur le site
									</span>
								</label>
							</div>
						</div>

						<div class="text-center">
							<button type="submit" class="bg-orange-500 hover:bg-orange-600 text-white font-bold py-4 px-8 transition-colors inline-flex items-center text-lg">
								<svg class="w-5 h-5 mr-2" fill="none" stroke="currentColor" viewbox="0 0 24 24">
									<path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 6v6m0 0v6m0-6h6m-6 0H6"></path>
								</svg>
								Ajouter les Travaux
							</button>
						</div>
					</form>
				</div>
			</div>

			<!-- Travaux existants -->
			<div class="mb-8">
				<h2 class="text-2xl font-bold text-slate-800 mb-6 text-center">
					<span class="mr-2">📋</span>
					Travaux Existants ({{ travaux|length }})
				</h2>

				{% if travaux and travaux|length > 0 %}
					<div class="grid gap-6 max-w-6xl mx-auto">
						{% for travail in travaux %}
							<div id="travail-{{ travail.id }}" class="bg-white shadow-md border-l-4 {{ travail.visible ? (travail.important ? 'border-red-500' : 'border-orange-500') : 'border-slate-300' }} p-6 hover:shadow-lg transition-all duration-300">
								<div class="flex flex-col md:flex-row md:items-start justify-between">
									<div class="flex-1">
										<div class="flex items-center mb-3 flex-wrap gap-2">
											<h3 class="text-xl font-bold text-slate-800">{{ travail.titre }}</h3>

											{% if travail.important %}
												<span class="bg-red-100 text-red-800 px-3 py-1 text-xs font-medium border border-red-200">
													🚨 IMPORTANT
												</span>
											{% endif %}

											{% if travail.visible %}
												<span class="bg-green-100 text-green-800 px-3 py-1 text-xs font-medium border border-green-200">
													👁️ VISIBLE
												</span>
											{% else %}
												<span class="bg-slate-100 text-slate-600 px-3 py-1 text-xs font-medium border border-slate-200">
													🚫 MASQUÉ
												</span>
											{% endif %}

											{% set statusClass = travail.statut == 'TERMINE' ? 'bg-green-100 text-green-800 border-green-200' : (travail.statut == 'EN_COURS' ? 'bg-blue-100 text-blue-800 border-blue-200' : (travail.statut == 'SUSPENDU' ? 'bg-red-100 text-red-800 border-red-200' : 'bg-slate-100 text-slate-600 border-slate-200')) %}
											<span class="{{ statusClass }} px-3 py-1 text-xs font-medium border">
												{% if travail.statut == 'PLANIFIE' %}📋 Planifié
												{% endif %}
												{% if travail.statut == 'EN_COURS' %}🚧 En cours
												{% endif %}
												{% if travail.statut == 'TERMINE' %}✅ Terminé
												{% endif %}
												{% if travail.statut == 'SUSPENDU' %}⏸️ Suspendu
												{% endif %}
											</span>
										</div>

										<p class="text-slate-600 mb-4 leading-relaxed">{{ travail.description }}</p>

										<!-- Barre de progression -->
										<div class="mb-4">
											<div class="flex justify-between text-sm text-slate-600 mb-1">
												<span>Progression</span>
												<span>{{ travail.progression }}%</span>
											</div>
											<div class="w-full bg-slate-200 h-2">
												<div class="bg-orange-500 h-2 transition-all duration-300" style="width: {{ travail.progression }}%"></div>
											</div>
										</div>

										<div class="text-sm text-slate-500 space-y-1">
											{% if travail.dateDebut %}
												<div class="flex items-center">
													<svg class="w-4 h-4 mr-2" fill="none" stroke="currentColor" viewbox="0 0 24 24">
														<path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M8 7V3m8 4V3m-9 8h10M5 21h14a2 2 0 002-2V7a2 2 0 00-2-2H5a2 2 0 00-2 2v12a2 2 0 002 2z"></path>
													</svg>
													Début:
													{{ travail.dateDebut|date('d/m/Y') }}
													{% if travail.dateFin %}
														- Fin prévue:
														{{ travail.dateFin|date('d/m/Y') }}
													{% endif %}
												</div>
											{% endif %}
											<div class="flex items-center">
												<svg class="w-4 h-4 mr-2" fill="none" stroke="currentColor" viewbox="0 0 24 24">
													<path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M16 7a4 4 0 11-8 0 4 4 0 018 0zM12 14a7 7 0 00-7 7h14a7 7 0 00-7-7z"></path>
												</svg>
												Ajouté par
												{{ travail.auteur.firstName }}
												{{ travail.auteur.lastName }}
											</div>
											<div class="flex items-center">
												<svg class="w-4 h-4 mr-2" fill="none" stroke="currentColor" viewbox="0 0 24 24">
													<path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 8v4l3 3m6-3a9 9 0 11-18 0 9 9 0 0118 0z"></path>
												</svg>
												Modifié le
												{{ travail.updatedAt|date('d/m/Y à H:i') }}
											</div>
										</div>
									</div>

									<!-- Boutons d'action -->
									<div class="mt-4 pt-4 border-t border-slate-200">
										<div
											class="text-center space-x-2">
											<!-- Bouton Modifier -->
											<button onclick="editTravaux({{ travail.id|default(0) }}, '{{ (travail.titre|default(''))|e('js') }}', '{{ (travail.description|default(''))|e('js') }}', '{{ travail.dateDebut ? travail.dateDebut|date('Y-m-d') : '' }}', '{{ travail.dateFin ? travail.dateFin|date('Y-m-d') : '' }}', {{ travail.progression|default(0) }}, '{{ travail.statut|default('EN_COURS') }}', {{ travail.important|default(false) ? 1 : 0 }}, {{ travail.visible|default(true) ? 1 : 0 }})" class="bg-green-500 hover:bg-green-600 text-white px-4 py-2 rounded text-sm font-medium transition-colors inline-block mr-2">
												✏️ Modifier
											</button>

											<!-- Bouton Visibilité -->
											<form action="/travaux/{{ travail.id }}/toggle-visibility" method="POST" class="inline-block mr-2">
												<button type="submit" class="{% if travail.visible %}bg-gray-500 hover:bg-gray-600{% else %}bg-green-500 hover:bg-green-600{% endif %} text-white px-4 py-2 rounded text-sm font-medium transition-colors">
													{% if travail.visible %}
														👁️ Masquer
													{% else %}
														👁️‍🗨️ Afficher
													{% endif %}
												</button>
											</form>

											<!-- Bouton Supprimer -->
											<button onclick="confirmDelete({{ travail.id|default(0) }}, '{{ (travail.titre|default('Travail'))|e('js') }}')" class="bg-red-500 hover:bg-red-600 text-white px-4 py-2 rounded text-sm font-medium transition-colors inline-block">
												🗑️ Supprimer
											</button>
										</div>
									</div>
								</div>
							</div>
						{% endfor %}
					</div>
				{% else %}
					<div class="text-center py-12">
						<div class="bg-white shadow-md p-8 max-w-2xl mx-auto">
							<div class="text-6xl mb-4">🔨</div>
							<h3 class="text-xl font-bold text-slate-800 mb-2">Aucuns travaux</h3>
							<p class="text-slate-600">Ajoutez vos premiers travaux pour informer les familles.</p>
						</div>
					</div>
				{% endif %}
			</div>

			<!-- Information Section -->
			<div class="bg-blue-50 border border-blue-200 p-6 max-w-4xl mx-auto">
				<h3 class="text-lg font-bold text-blue-900 mb-3">
					<span class="mr-2">ℹ️</span>
					Information importante
				</h3>
				<div class="text-blue-800 text-sm space-y-2">
					<p>• Les travaux visibles s'affichent automatiquement sur la page d'accueil du site dans la section "Travaux".</p>
					<p>• La progression est affichée avec une barre de progression visuelle (0 à 100%).</p>
					<p>• Les travaux importants sont mis en évidence avec une icône d'alerte.</p>
					<p>• Vous pouvez masquer/afficher des travaux sans les supprimer.</p>
				</div>
			</div>
		</div>
	</div>

	<!-- Modal de modification -->
	<div id="editModal" class="fixed inset-0 bg-black bg-opacity-60 hidden z-50 flex items-center justify-center">
		<div class="bg-white rounded-xl p-8 max-w-2xl mx-4 shadow-2xl max-h-screen overflow-y-auto border-t-4 border-orange-500">
			<div class="flex items-center mb-6">
				<div class="bg-orange-100 rounded-full p-3 mr-4">
					<svg class="w-6 h-6 text-orange-600" fill="none" stroke="currentColor" viewbox="0 0 24 24">
						<path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M11 5H6a2 2 0 00-2 2v11a2 2 0 002 2h11a2 2 0 002-2v-5m-1.414-9.414a2 2 0 112.828 2.828L11.828 15H9v-2.828l8.586-8.586z"></path>
					</svg>
				</div>
				<h3 class="text-2xl font-bold text-slate-800">Modifier les travaux</h3>
			</div>
			<form id="editForm" method="POST">
				<div class="space-y-6">
					<div>
						<label for="editTitre" class="block text-sm font-medium text-slate-700 mb-2">Titre</label>
						<input type="text" id="editTitre" name="titre" class="w-full px-4 py-3 border border-slate-300 rounded-lg focus:ring-2 focus:ring-orange-500 focus:border-orange-500 transition-colors" required>
					</div>
					<div>
						<label for="editDescription" class="block text-sm font-medium text-slate-700 mb-2">Description</label>
						<textarea id="editDescription" name="description" rows="4" class="w-full px-4 py-3 border border-slate-300 rounded-lg focus:ring-2 focus:ring-orange-500 focus:border-orange-500 transition-colors" required></textarea>
					</div>
					<div class="grid grid-cols-2 gap-4">
						<div>
							<label for="editDateDebut" class="block text-sm font-medium text-slate-700 mb-2">Date de début</label>
							<input type="date" id="editDateDebut" name="dateDebut" class="w-full px-4 py-3 border border-slate-300 rounded-lg focus:ring-2 focus:ring-orange-500 focus:border-orange-500 transition-colors">
						</div>
						<div>
							<label for="editDateFin" class="block text-sm font-medium text-slate-700 mb-2">Date de fin</label>
							<input type="date" id="editDateFin" name="dateFin" class="w-full px-4 py-3 border border-slate-300 rounded-lg focus:ring-2 focus:ring-orange-500 focus:border-orange-500 transition-colors">
						</div>
					</div>
					<div class="grid grid-cols-2 gap-4">
						<div>
							<label for="editProgression" class="block text-sm font-medium text-slate-700 mb-2">Progression (%)</label>
							<input type="number" id="editProgression" name="progression" min="0" max="100" class="w-full px-4 py-3 border border-slate-300 rounded-lg focus:ring-2 focus:ring-orange-500 focus:border-orange-500 transition-colors">
						</div>
						<div>
							<label for="editStatut" class="block text-sm font-medium text-slate-700 mb-2">Statut</label>
							<select id="editStatut" name="statut" class="w-full px-4 py-3 border border-slate-300 rounded-lg focus:ring-2 focus:ring-orange-500 focus:border-orange-500 transition-colors">
								<option value="PLANIFIE">📋 Planifié</option>
								<option value="EN_COURS">🚧 En cours</option>
								<option value="TERMINE">✅ Terminé</option>
								<option value="SUSPENDU">⏸️ Suspendu</option>
							</select>
						</div>
					</div>
					<div class="flex items-center space-x-6">
						<label class="flex items-center">
							<input type="checkbox" id="editImportant" name="important" value="true" class="w-4 h-4 text-orange-600 bg-slate-100 border-slate-300 focus:ring-orange-500 focus:ring-2 rounded">
							<span class="ml-2 text-sm font-medium text-slate-700">🚨 Travaux importants</span>
						</label>
						<label class="flex items-center">
							<input type="checkbox" id="editVisible" name="visible" value="true" class="w-4 h-4 text-orange-600 bg-slate-100 border-slate-300 focus:ring-orange-500 focus:ring-2 rounded">
							<span class="ml-2 text-sm font-medium text-slate-700">👁️ Visible sur le site</span>
						</label>
					</div>
				</div>
				<div class="flex justify-end space-x-4 mt-8 pt-6 border-t border-slate-200">
					<button type="button" onclick="closeEditModal()" class="bg-slate-500 hover:bg-slate-600 text-white px-6 py-3 rounded-lg transition-colors font-medium">
						Annuler
					</button>
					<button type="submit" class="bg-orange-500 hover:bg-orange-600 text-white px-6 py-3 rounded-lg transition-colors font-medium">
						💾 Sauvegarder
					</button>
				</div>
			</form>
		</div>
	</div>

	<!-- Modal de confirmation de suppression -->
	<div id="deleteModal" class="fixed inset-0 bg-black bg-opacity-60 hidden z-50 flex items-center justify-center">
		<div class="bg-white rounded-xl p-8 max-w-md mx-4 shadow-2xl border-t-4 border-red-500">
			<div class="flex items-center mb-6">
				<div class="bg-red-100 rounded-full p-3 mr-4">
					<svg class="w-6 h-6 text-red-600" fill="none" stroke="currentColor" viewbox="0 0 24 24">
						<path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M19 7l-.867 12.142A2 2 0 0116.138 21H7.862a2 2 0 01-1.995-1.858L5 7m5 4v6m4-6v6m1-10V4a1 1 0 00-1-1h-4a1 1 0 00-1 1v3M4 7h16"></path>
					</svg>
				</div>
				<h3 class="text-2xl font-bold text-red-700">Confirmer la suppression</h3>
			</div>
			<div class="bg-red-50 border border-red-200 rounded-lg p-4 mb-6">
				<p class="text-red-800">
					⚠️ Êtes-vous sûr de vouloir supprimer les travaux
					<span class="font-bold">"<span id="travauxTitle"></span>"</span>
					?
				</p>
				<p class="text-red-600 text-sm mt-2">Cette action est irréversible.</p>
			</div>
			<div class="flex justify-end space-x-4">
				<button onclick="closeDeleteModal()" class="bg-slate-500 hover:bg-slate-600 text-white px-6 py-3 rounded-lg transition-colors font-medium">
					Annuler
				</button>
				<form id="deleteForm" method="POST" class="inline">
					<button type="submit" class="bg-red-500 hover:bg-red-600 text-white px-6 py-3 rounded-lg transition-colors font-medium">
						🗑️ Supprimer définitivement
					</button>
				</form>
			</div>
		</div>
	</div>

	<!-- Modal d'erreur -->
	<div id="errorModal" class="fixed inset-0 bg-black bg-opacity-50 hidden z-50 flex items-center justify-center">
		<div class="bg-white rounded-lg p-6 max-w-md mx-4 shadow-2xl border-l-4 border-red-500">
			<div class="flex items-center mb-4">
				<div class="bg-red-100 rounded-full p-2 mr-3">
					<svg class="w-6 h-6 text-red-600" fill="none" stroke="currentColor" viewbox="0 0 24 24">
						<path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 9v2m0 4h.01m-6.938 4h13.856c1.54 0 2.502-1.667 1.732-2.5L13.732 4c-.77-.833-1.732-.833-2.5 0L4.732 16.5c-.77.833.192 2.5 1.732 2.5z"></path>
					</svg>
				</div>
				<h3 class="text-lg font-bold text-red-700">Erreur</h3>
			</div>
			<p id="errorMessage" class="text-gray-700 mb-6">Une erreur s'est produite</p>
			<div class="flex justify-end">
				<button onclick="closeErrorModal()" class="bg-red-500 hover:bg-red-600 text-white px-6 py-2 rounded-lg transition-colors font-medium">
					Fermer
				</button>
			</div>
		</div>
	</div>

	<!-- Modal de succès -->
	<div id="successModal" class="fixed inset-0 bg-black bg-opacity-50 hidden z-50 flex items-center justify-center">
		<div class="bg-white rounded-lg p-6 max-w-md mx-4 shadow-2xl border-l-4 border-green-500">
			<div class="flex items-center mb-4">
