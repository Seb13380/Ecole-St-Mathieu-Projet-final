	<!-- Modal de modification -->
	<div id="editModal" class="fixed inset-0 bg-black bg-opacity-60 hidden z-50 flex items-center justify-center">
		<div class="bg-white rounded-xl p-8 max-w-2xl mx-4 shadow-2xl max-h-screen overflow-y-auto border-t-4 border-blue-500">
			<div class="flex items-center mb-6">
				<div class="bg-blue-100 rounded-full p-3 mr-4">
					<svg class="w-6 h-6 text-blue-600" fill="none" stroke="currentColor" viewbox="0 0 24 24">
						<path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M11 5H6a2 2 0 00-2 2v11a2 2 0 002 2h11a2 2 0 002-2v-5m-1.414-9.414a2 2 0 112.828 2.828L11.828 15H9v-2.828l8.586-8.586z"></path>
