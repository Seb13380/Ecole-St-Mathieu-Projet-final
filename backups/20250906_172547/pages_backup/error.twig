{% extends "layouts/base.twig" %}

{% block main %}
<div class="min-h-screen bg-gray-100 py-12">
    <div class="max-w-md mx-auto bg-white rounded-lg shadow-md p-6 text-center">
        <div class="mb-4">
            <svg class="mx-auto h-16 w-16 text-red-500" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 9v2m0 4h.01m-6.938 4h13.856c1.54 0 2.502-1.667 1.732-2.5L13.732 4c-.77-.833-1.964-.833-2.732 0L3.732 16.5c-.77.833.192 2.5 1.732 2.5z" />
            </svg>
        </div>
        
        <h1 class="text-2xl font-bold text-gray-900 mb-4">
            {{ title|default('Une erreur est survenue') }}
        </h1>
        
        <p class="text-gray-600 mb-6">
            {{ message|default('Nous nous excusons pour la gêne occasionnée.') }}
        </p>
        
        <div class="space-y-2">
            <a href="javascript:history.back()" 
               class="block w-full bg-blue-600 text-white py-2 px-4 rounded-md hover:bg-blue-700 transition duration-300">
                Retour
            </a>
            
            <a href="/" 
               class="block w-full bg-gray-300 text-gray-700 py-2 px-4 rounded-md hover:bg-gray-400 transition duration-300">
                Accueil
            </a>
        </div>
    </div>
</div>
{% endblock %}
