{% extends "layouts/base.twig" %}

{% block title %}Contact - École Saint-Mathieu
{% endblock %}

{% block main %}
	<div class="max-w-2xl mx-auto bg-white rounded-xl shadow-md p-8 mt-10">
		<h1 class="text-4xl font-bold text-[#304a4d] mb-6 text-center">Contactez-nous</h1>
		<form method="POST" action="/contact/send">
			<div>
				<label for="name" class="block text-xl font-medium text-[#304a4d] text-center">Nom</label>
				<input type="text" id="name" name="name" required class="input input-bordered w-full" style="background-color: #a7e3dd !important; margin-bottom: 1rem;"/>
			</div>
			<div>
				<label for="email" class="block text-xl font-medium text-[#304a4d] text-center">Email</label>
				<input type="email" id="email" name="email" required class="input input-bordered w-full" style="background-color: #a7e3dd !important; margin-bottom: 1rem;"/>
			</div>
			<div>
				<label for="message" class="block text-xl font-medium text-[#304a4d] text-center">Message</label>
				<textarea id="message" name="message" rows="5" required class="textarea textarea-bordered w-full" style="background-color: #a7e3dd !important; margin-bottom: 1rem;"></textarea>
			</div>
			<button type="submit" class="btn btn-primary w-full text-2xl">Envoyer</button>
		</form>
		<div class="mt-8 border-t pt-6 text-center">
			<h2 class="text-2xl font-semibold text-[#304a4d] mb-2">Nos coordonnées</h2>
			<p class="text-xl text-[#304a4d]">📞 Téléphone Accueil: 04 91 07 07 18</p>
			<p class="text-xl text-[#304a4d]">🏫 Adresse : 22 Place des Héros, 13013 Marseille</p>
			<p class="text-xl text-[#304a4d]">✉️ Email : ecole-saint-mathieu@wanadoo.fr</p>
		</div>
	</div>
{% endblock %}
