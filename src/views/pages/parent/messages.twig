{% extends "layouts/base.twig" %}

{% block title %}{{ title }}{% endblock %}

{% block main %}
<div class="min-h-screen bg-gray-50 py-8">
    <div class="max-w-6xl mx-auto px-4">
        <!-- En-t√™te -->
        <div class="bg-white rounded-lg shadow-md p-6 mb-6">
            <div class="flex items-center justify-between">
                <div>
                    <h1 class="text-2xl font-bold text-gray-800">üìß Messagerie</h1>
                    <p class="text-gray-600 mt-2">Consultez vos messages et communications</p>
                </div>
                <a href="/parent/dashboard" class="inline-flex items-center px-4 py-2 bg-blue-600 text-white rounded-lg hover:bg-blue-700 transition-colors">
                    ‚Üê Retour au tableau de bord
                </a>
            </div>
        </div>

        <!-- Messages -->
        <div class="bg-white rounded-lg shadow-md">
            {% if messages and messages|length > 0 %}
                <div class="p-6 border-b border-gray-200">
                    <h2 class="text-lg font-semibold text-gray-800">
                        Vos messages ({{ messages|length }})
                    </h2>
                </div>
                
                <div class="divide-y divide-gray-200">
                    {% for message in messages %}
                        <div class="p-6 hover:bg-gray-50 transition-colors {% if not message.lu %}bg-blue-50{% endif %}">
                            <div class="flex items-start justify-between">
                                <div class="flex-1">
                                    <div class="flex items-center space-x-3 mb-2">
                                        <div class="flex-shrink-0">
                                            {% if not message.lu %}
                                                <span class="inline-flex items-center px-2 py-1 rounded-full text-xs font-medium bg-blue-100 text-blue-800">
                                                    Nouveau
                                                </span>
                                            {% endif %}
                                        </div>
                                        <div class="flex-1">
                                            <h3 class="text-lg font-medium text-gray-900">
                                                {{ message.sujet|default('Message sans sujet') }}
                                            </h3>
                                            <p class="text-sm text-gray-500">
                                                De: {{ message.expediteur.firstName }} {{ message.expediteur.lastName }}
                                                {% if message.expediteur.role %}
                                                    <span class="inline-flex items-center px-2 py-1 rounded text-xs font-medium bg-gray-100 text-gray-800 ml-2">
                                                        {{ message.expediteur.role }}
                                                    </span>
                                                {% endif %}
                                            </p>
                                        </div>
                                    </div>
                                    
                                    <div class="mt-3">
                                        <p class="text-gray-700 leading-relaxed">
                                            {{ message.contenu|nl2br }}
                                        </p>
                                    </div>
                                    
                                    <div class="mt-4 flex items-center justify-between">
                                        <div class="text-sm text-gray-500">
                                            üìÖ {{ message.dateEnvoi|date('d/m/Y √† H:i') }}
                                        </div>
                                        
                                        {% if message.priorite %}
                                            <span class="inline-flex items-center px-2 py-1 rounded-full text-xs font-medium 
                                                {% if message.priorite == 'HAUTE' %}bg-red-100 text-red-800
                                                {% elseif message.priorite == 'MOYENNE' %}bg-yellow-100 text-yellow-800
                                                {% else %}bg-green-100 text-green-800{% endif %}">
                                                Priorit√©: {{ message.priorite }}
                                            </span>
                                        {% endif %}
                                    </div>
                                </div>
                            </div>
                        </div>
                    {% endfor %}
                </div>
            {% else %}
                <!-- Aucun message -->
                <div class="p-12 text-center">
                    <div class="mx-auto flex items-center justify-center h-16 w-16 rounded-full bg-gray-100 mb-4">
                        <svg class="h-8 w-8 text-gray-400" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M3 8l7.89 4.26a2 2 0 002.22 0L21 8M5 19h14a2 2 0 002-2V7a2 2 0 00-2-2H5a2 2 0 00-2 2v10a2 2 0 002 2z" />
                        </svg>
                    </div>
                    <h3 class="text-lg font-medium text-gray-900 mb-2">Aucun message</h3>
                    <p class="text-gray-500 mb-4">
                        Vous n'avez aucun message pour le moment.
                    </p>
                    <div class="text-sm text-gray-400">
                        üìß Les nouveaux messages appara√Ætront ici<br>
                        üîî Vous serez notifi√© des messages importants
                    </div>
                </div>
            {% endif %}
        </div>

        <!-- Actions rapides -->
        <div class="mt-6 bg-white rounded-lg shadow-md p-6">
            <h3 class="text-lg font-semibold text-gray-800 mb-4">Actions rapides</h3>
            <div class="grid grid-cols-1 md:grid-cols-3 gap-4">
                <a href="/parent/dashboard" class="flex items-center p-4 border border-gray-200 rounded-lg hover:bg-gray-50 transition-colors">
                    <div class="flex-shrink-0">
                        <svg class="h-6 w-6 text-blue-600" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M3 7v10a2 2 0 002 2h14a2 2 0 002-2V9a2 2 0 00-2-2H5a2 2 0 00-2-2z" />
                        </svg>
                    </div>
                    <div class="ml-3">
                        <p class="text-sm font-medium text-gray-900">Tableau de bord</p>
                        <p class="text-sm text-gray-500">Retour √† l'accueil</p>
                    </div>
                </a>
                
                <div class="flex items-center p-4 border border-gray-200 rounded-lg bg-gray-50 opacity-50">
                    <div class="flex-shrink-0">
                        <svg class="h-6 w-6 text-gray-400" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 6v6m0 0v6m0-6h6m-6 0H6" />
                        </svg>
                    </div>
                    <div class="ml-3">
                        <p class="text-sm font-medium text-gray-500">Nouveau message</p>
                        <p class="text-sm text-gray-400">Prochainement</p>
                    </div>
                </div>
                
                <div class="flex items-center p-4 border border-gray-200 rounded-lg bg-gray-50 opacity-50">
                    <div class="flex-shrink-0">
                        <svg class="h-6 w-6 text-gray-400" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M19 7l-.867 12.142A2 2 0 0116.138 21H7.862a2 2 0 01-1.995-1.858L5 7m5 4v6m4-6v6m1-10V4a1 1 0 00-1-1h-4a1 1 0 00-1 1v3M4 7h16" />
                        </svg>
                    </div>
                    <div class="ml-3">
                        <p class="text-sm font-medium text-gray-500">Archives</p>
                        <p class="text-sm text-gray-400">Prochainement</p>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
{% endblock %}
