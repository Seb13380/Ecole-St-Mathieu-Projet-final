{% extends "layouts/base.twig" %}

{% block title %}École Saint-Mathieu - OGEC
{% endblock %}

{% block main %}
	<style>
		/* Reset margins et padding pour pleine largeur */
		.ogec-container {
			margin: 0 -50vw;
			padding: 0;
