{% extends "layouts/base.twig" %}

{% block content %}
	<div class="min-h-screen bg-gray-100 py-8">
		<div class="max-w-4xl mx-auto px-4 sm:px-6 lg:px-8">
			<div class="mb-8">
				<h1 class="text-3xl font-bold text-gray-900">Actualités de l'école</h1>
				<p class="mt-2 text-gray-600">Retrouvez toutes les informations et actualités de l'École Saint-Mathieu</p>
			</div>


			<div class="space-y-8">
				{% for actualite in actualites %}
					<article class="bg-white shadow rounded-lg overflow-hidden">
						<div class="px-6 py-8">
							<div class="flex items-start justify-between mb-4">
								<div class="flex-1">
									<div class="flex items-center mb-2">
										{% if actualite.important %}
											<span class="inline-flex items-center px-3 py-0.5 rounded-full text-sm font-medium bg-red-100 text-red-800 mr-3">
												<svg class="w-4 h-4 mr-1" fill="none" stroke="currentColor" viewbox="0 0 24 24">
													<path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 9v2m0 4h.01m-6.938 4h13.856c1.54 0 2.502-1.667 1.732-2.5L13.732 4c-.77-.833-1.964-.833-2.732 0L3.732 16.5c-.77.833.192 2.5 1.732 2.5z"></path>
												</svg>
												Important
											</span>
										{% endif %}

										<div class="flex items-center text-sm text-gray-500">
											<svg class="w-4 h-4 mr-1" fill="none" stroke="currentColor" viewbox="0 0 24 24">
												<path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M16 7a4 4 0 11-8 0 4 4 0 018 0zM12 14a7 7 0 00-7 7h14a7 7 0 00-7-7z"></path>
											</svg>
											<span class="mr-3">{{ actualite.auteur.firstName }}
												{{ actualite.auteur.lastName }}</span>

											<svg class="w-4 h-4 mr-1" fill="none" stroke="currentColor" viewbox="0 0 24 24">
												<path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M8 7V3m8 4V3m-9 8h10M5 21h14a2 2 0 002-2V7a2 2 0 00-2-2H5a2 2 0 00-2 2v12a2 2 0 002 2z"></path>
											</svg>
											<span>{{ actualite.datePublication|date('d/m/Y à H:i') }}</span>
										</div>
									</div>

									<h2 class="text-2xl font-bold text-gray-900 mb-4">{{ actualite.titre }}</h2>
								</div>
							</div>

							<div class="prose max-w-none">
								<div class="text-gray-700 leading-relaxed">
									{{ actualite.contenu|nl2br }}
								</div>

								{% if actualite.mediaUrl %}
									<div class="mt-6">
										{% if actualite.mediaType == 'image' %}
											<img src="{{ actualite.mediaUrl }}" alt="{{ actualite.titre }}" class="w-full max-w-2xl h-auto rounded-lg shadow-md border border-gray-200">
										{% elseif actualite.mediaType == 'video' %}
											<video controls class="w-full max-w-2xl h-auto rounded-lg shadow-md border border-gray-200">
												<source src="{{ actualite.mediaUrl }}" type="video/mp4">
												Votre navigateur ne supporte pas les vidéos.
											</video>
										{% endif %}
									</div>
								{% endif %}
							</div>

							<div class="mt-6 pt-4 border-t border-gray-200">
								<div class="flex items-center justify-between">
									<div class="flex items-center space-x-2">
										{% if actualite.auteur.role == 'DIRECTION' %}
											<span class="inline-flex items-center px-2.5 py-0.5 rounded-full text-xs font-medium bg-purple-100 text-purple-800">
												Direction
											</span>
										{% elseif actualite.auteur.role == 'ADMIN' %}
											<span class="inline-flex items-center px-2.5 py-0.5 rounded-full text-xs font-medium bg-blue-100 text-blue-800">
												Administration
											</span>
										{% elseif actualite.auteur.role == 'ENSEIGNANT' %}
											<span class="inline-flex items-center px-2.5 py-0.5 rounded-full text-xs font-medium bg-green-100 text-green-800">
												Enseignant
											</span>
										{% endif %}
									</div>

									<div class="text-sm text-gray-500">
										{% if actualite.createdAt != actualite.updatedAt %}
											<span>Modifié le
												{{ actualite.updatedAt|date('d/m/Y à H:i') }}</span>
										{% endif %}
									</div>
								</div>
							</div>
						</div>
					</article>
				{% else %}
					<div class="bg-white shadow rounded-lg p-8 text-center">
						<svg class="mx-auto h-12 w-12 text-gray-400" fill="none" viewbox="0 0 24 24" stroke="currentColor">
							<path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M19 20H5a2 2 0 01-2-2V6a2 2 0 012-2h10a2 2 0 012 2v1m2 13a2 2 0 01-2-2V7m2 13a2 2 0 002-2V9a2 2 0 00-2-2h-2m-4-3H9M7 16h6M7 8h6v4H7V8z"/>
						</svg>
						<h3 class="mt-2 text-sm font-medium text-gray-900">Aucune actualité</h3>
						<p class="mt-1 text-sm text-gray-500">Il n'y a pas d'actualités à afficher pour le moment.</p>
					</div>
				{% endfor %}
			</div>

			{% if isAuthenticated %}
				<div class="mt-8 text-center">
					{% if user.role == 'ADMIN' or user.role == 'DIRECTION' %}
						<a href="/actualites/manage" class="inline-flex items-center px-4 py-2 border border-transparent text-sm font-medium rounded-md text-white bg-blue-600 hover:bg-blue-700 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-blue-500">
							<svg class="w-4 h-4 mr-2" fill="none" stroke="currentColor" viewbox="0 0 24 24">
								<path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 6v6m0 0v6m0-6h6m-6 0H6"></path>
							</svg>
							Gérer les actualités
						</a>
					{% endif %}
				</div>
			{% endif %}
		</div>
	</div>
{% endblock %}
