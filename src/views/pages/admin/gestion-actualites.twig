{% extends "layouts/base.twig" %}

{% block title %}Gestion des Actualités
{% endblock %}

{% block styles %}
	<!-- TinyMCE Editor -->
	<script src="https://cdn.tiny.cloud/1/no-api-key/tinymce/7/tinymce.min.js" referrerpolicy="origin"></script>
	<style>
		.actualite-card {
			transition: all 0.3s ease;
		}
		.actualite-card:hover {
			transform: translateY(-2px);
			box-shadow: 0 10px 25px rgba(0, 0, 0, 0.1);
		}
		.drag-drop-zone {
			border: 2px dashed #cbd5e0;
			transition: all 0.3s ease;
		}
		.drag-drop-zone:hover {
			border-color: #3182ce;
			background-color: #ebf8ff;
		}
		.file-preview {
			max-width: 100px;
			max-height: 100px;
			object-fit: cover;
		}
	</style>
{% endblock %}

{% block main %}
	<div class="min-h-screen bg-gray-50 py-8">
		<div
			class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">

			<!-- En-tête -->
			<div class="bg-white rounded-lg shadow-sm border border-gray-200 p-6 mb-8">
				<div class="flex justify-between items-center">
					<div>
						<h1 class="text-3xl font-bold text-gray-900">📰 Gestion des Actualités</h1>
						<p class="text-gray-600 mt-2">Créez et gérez les actualités de l'école</p>
					</div>

					{% if hasPermission(user.role, 'create') %}
						<button onclick="openCreateModal()" class="bg-blue-600 hover:bg-blue-700 text-white px-6 py-3 rounded-lg font-medium transition-colors flex items-center">
							<svg class="w-5 h-5 mr-2" fill="none" stroke="currentColor" viewbox="0 0 24 24">
								<path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 4v16m8-8H4"></path>
							</svg>
							Nouvelle Actualité
						</button>
					{% endif %}
				</div>
			</div>

			<!-- Liste des actualités -->
			<div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-6">
				{% for actualite in actualites %}
					<div
						class="actualite-card bg-white rounded-lg shadow-sm border border-gray-200 overflow-hidden">

						<!-- Image d'en-tête si disponible -->
						{% if actualite.imageUrl %}
							<div class="h-48 bg-cover bg-center" style="background-image: url('{{ actualite.imageUrl }}')"></div>
						{% endif %}

						<div
							class="p-6">
							<!-- Badges de statut -->
							<div class="flex items-center justify-between mb-3">
								{% if actualite.important %}
									<span class="bg-red-100 text-red-800 text-xs font-medium px-2.5 py-0.5 rounded-full">
										🔥 Important
									</span>
								{% endif %}

								{% if actualite.visible %}
									<span class="bg-green-100 text-green-800 text-xs font-medium px-2.5 py-0.5 rounded-full">
										✅ Publié
									</span>
								{% else %}
									<span class="bg-yellow-100 text-yellow-800 text-xs font-medium px-2.5 py-0.5 rounded-full">
										⏳ Brouillon
									</span>
								{% endif %}
							</div>

							<!-- Titre -->
							<h3 class="text-lg font-semibold text-gray-900 mb-2 line-clamp-2">
								{{ actualite.titre }}
							</h3>

							<!-- Aperçu du contenu -->
							<p class="text-gray-600 text-sm mb-4 line-clamp-3">
								{{ actualite.contenu | striptags | slice(0, 120) }}...
							</p>

							<!-- Métadonnées -->
							<div class="text-xs text-gray-500 mb-4">
								<div class="flex items-center justify-between">
									<span>👤
										{{ actualite.auteur.firstName }}
										{{ actualite.auteur.lastName }}</span>
									<span>📅
										{{ actualite.datePublication | date('d/m/Y') }}</span>
								</div>
								<span class="bg-gray-100 text-gray-600 px-2 py-1 rounded text-xs mt-1 inline-block">
									{{ actualite.auteur.role }}
								</span>
							</div>

							<!-- Actions -->
							<div class="flex space-x-2">
								{% if canEdit(user, actualite) %}
									<button onclick="editActualite({{ actualite.id }})" class="flex-1 bg-blue-50 text-blue-700 px-3 py-2 rounded-md text-sm font-medium hover:bg-blue-100 transition-colors">
										✏️ Modifier
									</button>
								{% endif %}

								{% if canDelete(user, actualite) %}
									<button onclick="deleteActualite({{ actualite.id }})" class="bg-red-50 text-red-700 px-3 py-2 rounded-md text-sm font-medium hover:bg-red-100 transition-colors">
										🗑️
									</button>
								{% endif %}
							</div>
						</div>
					</div>
				{% endfor %}
			</div>
		</div>
	</div>

	<!-- Modal de création/édition -->
	<div id="actualiteModal" class="fixed inset-0 z-50 hidden overflow-y-auto" aria-labelledby="modal-title" role="dialog" aria-modal="true">
		<div class="flex items-end justify-center min-h-screen pt-4 px-4 pb-20 text-center sm:block sm:p-0">
			<div class="fixed inset-0 bg-gray-500 bg-opacity-75 transition-opacity" onclick="closeModal()"></div>

			<div class="inline-block align-bottom bg-white rounded-lg text-left overflow-hidden shadow-xl transform transition-all sm:my-8 sm:align-middle sm:max-w-4xl sm:w-full">
				<form id="actualiteForm" enctype="multipart/form-data">
					<div class="bg-white px-6 pt-6 pb-4">
						<div class="flex items-center justify-between mb-6">
							<h3 class="text-lg font-medium text-gray-900" id="modalTitle">
								Nouvelle Actualité
							</h3>
							<button type="button" onclick="closeModal()" class="text-gray-400 hover:text-gray-600">
								<svg class="w-6 h-6" fill="none" stroke="currentColor" viewbox="0 0 24 24">
									<path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M6 18L18 6M6 6l12 12"></path>
								</svg>
							</button>
						</div>

						<!-- Titre -->
						<div class="mb-6">
							<label for="titre" class="block text-sm font-medium text-gray-700 mb-2">
								📝 Titre de l'actualité
							</label>
							<input type="text" id="titre" name="titre" required class="w-full px-4 py-3 border border-gray-300 rounded-lg focus:ring-2 focus:ring-blue-500 focus:border-blue-500" placeholder="Entrez le titre de l'actualité...">
						</div>

						<!-- Upload d'image principale -->
						<div class="mb-6">
							<label class="block text-sm font-medium text-gray-700 mb-2">
								🖼️ Image principale (optionnel)
							</label>
							<div class="drag-drop-zone p-6 text-center rounded-lg cursor-pointer" onclick="document.getElementById('imageUpload').click()">
								<input type="file" id="imageUpload" name="image" accept="image/*" class="hidden" onchange="previewImage(this)">
								<div id="imagePreview" class="hidden">
									<img id="previewImg" class="mx-auto file-preview rounded-lg mb-2" alt="Aperçu">
									<p class="text-sm text-gray-600">Cliquez pour changer l'image</p>
								</div>
								<div id="imagePlaceholder">
									<svg class="mx-auto h-12 w-12 text-gray-400" stroke="currentColor" fill="none" viewbox="0 0 48 48">
										<path d="M28 8H12a4 4 0 00-4 4v20m32-12v8m0 0v8a4 4 0 01-4 4H12a4 4 0 01-4-4v-4m32-4l-3.172-3.172a4 4 0 00-5.656 0L28 28M8 32l9.172-9.172a4 4 0 015.656 0L28 28m0 0l4 4m4-24h8m-4-4v8m-12 4h.02" stroke-width="2" stroke-linecap="round" stroke-linejoin="round"/>
									</svg>
									<p class="mt-2 text-sm text-gray-600">
										<span class="font-medium text-blue-600">Cliquez pour télécharger</span>
										ou glissez-déposez
									</p>
									<p class="text-xs text-gray-500">PNG, JPG, GIF jusqu'à 10MB</p>
								</div>
							</div>
						</div>

						<!-- Éditeur de contenu -->
						<div class="mb-6">
							<label for="contenu" class="block text-sm font-medium text-gray-700 mb-2">
								📄 Contenu de l'actualité
							</label>
							<textarea id="contenu" name="contenu" rows="15" class="w-full px-4 py-3 border border-gray-300 rounded-lg focus:ring-2 focus:ring-blue-500 focus:border-blue-500"></textarea>
						</div>

						<!-- Documents joints -->
						<div class="mb-6">
							<label class="block text-sm font-medium text-gray-700 mb-2">
								📎 Documents joints (optionnel)
							</label>
							<input type="file" id="documentsUpload" name="documents" multiple accept=".pdf,.doc,.docx,.txt" class="w-full px-4 py-3 border border-gray-300 rounded-lg focus:ring-2 focus:ring-blue-500 focus:border-blue-500">
							<p class="text-xs text-gray-500 mt-1">PDF, DOC, DOCX, TXT - Plusieurs fichiers autorisés</p>
						</div>

						<!-- Options -->
						<div class="grid grid-cols-1 md:grid-cols-2 gap-4 mb-6">
							<div class="flex items-center">
								<input type="checkbox" id="important" name="important" class="h-4 w-4 text-blue-600 focus:ring-blue-500 border-gray-300 rounded">
								<label for="important" class="ml-2 text-sm text-gray-700">
									🔥 Actualité importante
								</label>
							</div>

							<div class="flex items-center">
								<input type="checkbox" id="visible" name="visible" checked class="h-4 w-4 text-blue-600 focus:ring-blue-500 border-gray-300 rounded">
								<label for="visible" class="ml-2 text-sm text-gray-700">
									✅ Publier immédiatement
								</label>
							</div>
						</div>
					</div>

					<!-- Actions du modal -->
					<div class="bg-gray-50 px-6 py-4 flex justify-end space-x-3">
						<button type="button" onclick="closeModal()" class="px-4 py-2 text-sm font-medium text-gray-700 bg-white border border-gray-300 rounded-md hover:bg-gray-50">
							Annuler
						</button>
						<button type="submit" class="px-4 py-2 text-sm font-medium text-white bg-blue-600 border border-transparent rounded-md hover:bg-blue-700">
							💾 Enregistrer
						</button>
					</div>
				</form>
			</div>
		</div>
	</div>

{% endblock %}

{% block scripts %}
	<script>
		// Initialisation TinyMCE
tinymce.init({
selector: '#contenu',
height: 400,
menubar: false,
plugins: [
'advlist',
'autolink',
'lists',
'link',
'image',
'charmap',
'preview',
'anchor',
'searchreplace',
'visualblocks',
'code',
'fullscreen',
'insertdatetime',
'media',
'table',
'help',
'wordcount'
],
toolbar: 'undo redo | blocks | bold italic forecolor | alignleft aligncenter alignright alignjustify | bullist numlist outdent indent | removeformat | help',
content_style: 'body { font-family: -apple-system, BlinkMacSystemFont, San Francisco, Segoe UI, Roboto, Helvetica Neue, sans-serif; font-size: 14px; }',
language: 'fr_FR'
});

// Gestion du modal
function openCreateModal() {
document.getElementById('modalTitle').textContent = 'Nouvelle Actualité';
document.getElementById('actualiteForm').reset();
document.getElementById('actualiteModal').classList.remove('hidden');
document.body.style.overflow = 'hidden';
}

function closeModal() {
document.getElementById('actualiteModal').classList.add('hidden');
document.body.style.overflow = 'auto';
}

// Aperçu d'image
function previewImage(input) {
if (input.files && input.files[0]) {
const reader = new FileReader();
reader.onload = function (e) {
document.getElementById('previewImg').src = e.target.result;
document.getElementById('imagePreview').classList.remove('hidden');
document.getElementById('imagePlaceholder').classList.add('hidden');
};
reader.readAsDataURL(input.files[0]);
}
}

// Soumission du formulaire
document.getElementById('actualiteForm').addEventListener('submit', async function (e) {
e.preventDefault();

const formData = new FormData(this);
formData.set('contenu', tinymce.get('contenu').getContent());

try {
const response = await fetch('/admin/actualites', {
method: 'POST',
body: formData
});

if (response.ok) {
location.reload();
} else {
alert('Erreur lors de l\'enregistrement');
}
} catch (error) {
console.error('Erreur:', error);
alert('Erreur lors de l\'enregistrement');
}
});

// Actions sur les actualités
function editActualite(id) { // Charger les données et ouvrir le modal en mode édition
console.log('Éditer actualité:', id);
}

function deleteActualite(id) {
if (confirm('Êtes-vous sûr de vouloir supprimer cette actualité ?')) {
fetch (`/admin/actualites/${id}`, {method: 'DELETE'}).then(() => location.reload());
}
}
	</script>
{% endblock %}
