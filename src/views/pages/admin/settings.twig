{% extends "layouts/admin.twig" %}

{% block title %}
	{{ title }}
{% endblock %}

{% block content %}
	<div
		class="container mx-auto px-4 py-6">
		<!-- En-tête -->
		<div class="mb-6">
			<h1 class="text-3xl font-bold text-gray-800 mb-2">{{ title }}</h1>
			<p class="text-gray-600">Configuration et paramètres de l'école</p>
		</div>

		<!-- Messages -->
		{% if success %}
			<div class="bg-green-100 border border-green-400 text-green-700 px-4 py-3 rounded mb-4">
				{{ success }}
			</div>
		{% endif %}

		{% if error %}
			<div class="bg-red-100 border border-red-400 text-red-700 px-4 py-3 rounded mb-4">
				{{ error }}
			</div>
		{% endif %}

		<form
			action="/admin/settings" method="POST" class="space-y-6">
			<!-- Informations de l'école -->
			<div class="bg-white shadow rounded-lg">
				<div class="px-4 py-5 sm:p-6">
					<h3 class="text-lg leading-6 font-medium text-gray-900 mb-4">
						<i class="fas fa-school mr-2"></i>
						Informations de l'école
					</h3>
					<div class="grid grid-cols-1 gap-6 sm:grid-cols-2">
						<div>
							<label for="schoolName" class="block text-sm font-medium text-gray-700">
								Nom de l'école
							</label>
							<input type="text" name="schoolName" id="schoolName" value="{{ settings.schoolName }}" class="mt-1 focus:ring-indigo-500 focus:border-indigo-500 block w-full shadow-sm sm:text-sm border-gray-300 rounded-md">
						</div>

						<div>
							<label for="currentYear" class="block text-sm font-medium text-gray-700">
								Année scolaire
							</label>
							<input type="text" name="currentYear" id="currentYear" value="{{ settings.currentYear }}" class="mt-1 focus:ring-indigo-500 focus:border-indigo-500 block w-full shadow-sm sm:text-sm border-gray-300 rounded-md">
						</div>

						<div class="sm:col-span-2">
							<label for="schoolAddress" class="block text-sm font-medium text-gray-700">
								Adresse
							</label>
							<textarea name="schoolAddress" id="schoolAddress" rows="3" class="mt-1 focus:ring-indigo-500 focus:border-indigo-500 block w-full shadow-sm sm:text-sm border-gray-300 rounded-md">{{ settings.schoolAddress }}</textarea>
						</div>

						<div>
							<label for="schoolPhone" class="block text-sm font-medium text-gray-700">
								Téléphone
							</label>
							<input type="tel" name="schoolPhone" id="schoolPhone" value="{{ settings.schoolPhone }}" class="mt-1 focus:ring-indigo-500 focus:border-indigo-500 block w-full shadow-sm sm:text-sm border-gray-300 rounded-md">
						</div>

						<div>
							<label for="schoolEmail" class="block text-sm font-medium text-gray-700">
								Email
							</label>
							<input type="email" name="schoolEmail" id="schoolEmail" value="{{ settings.schoolEmail }}" class="mt-1 focus:ring-indigo-500 focus:border-indigo-500 block w-full shadow-sm sm:text-sm border-gray-300 rounded-md">
						</div>
					</div>
				</div>
			</div>

			<!-- Paramètres généraux -->
			<div class="bg-white shadow rounded-lg">
				<div class="px-4 py-5 sm:p-6">
					<h3 class="text-lg leading-6 font-medium text-gray-900 mb-4">
						<i class="fas fa-cogs mr-2"></i>
						Paramètres généraux
					</h3>
					<div class="grid grid-cols-1 gap-6 sm:grid-cols-2">
						<div>
							<label for="maxStudentsPerClass" class="block text-sm font-medium text-gray-700">
								Nombre max d'élèves par classe
							</label>
							<input type="number" name="maxStudentsPerClass" id="maxStudentsPerClass" value="{{ settings.maxStudentsPerClass }}" min="1" max="50" class="mt-1 focus:ring-indigo-500 focus:border-indigo-500 block w-full shadow-sm sm:text-sm border-gray-300 rounded-md">
						</div>

						<div class="sm:col-span-2">
							<div class="space-y-4">
								<div class="flex items-center">
									<input id="enableNotifications" name="enableNotifications" type="checkbox" {% if settings.enableNotifications %} checked {% endif %} class="focus:ring-indigo-500 h-4 w-4 text-indigo-600 border-gray-300 rounded">
									<label for="enableNotifications" class="ml-2 block text-sm text-gray-900">
										Activer les notifications par email
									</label>
								</div>

								<div class="flex items-center">
									<input id="enablePublicRegistration" name="enablePublicRegistration" type="checkbox" {% if settings.enablePublicRegistration %} checked {% endif %} class="focus:ring-indigo-500 h-4 w-4 text-indigo-600 border-gray-300 rounded">
									<label for="enablePublicRegistration" class="ml-2 block text-sm text-gray-900">
										Permettre les inscriptions publiques
									</label>
								</div>
							</div>
						</div>
					</div>
				</div>
			</div>

			<!-- Sécurité et maintenance -->
			<div class="bg-white shadow rounded-lg">
				<div class="px-4 py-5 sm:p-6">
					<h3 class="text-lg leading-6 font-medium text-gray-900 mb-4">
						<i class="fas fa-shield-alt mr-2"></i>
						Sécurité et maintenance
					</h3>
					<div class="space-y-4">
						<div class="flex items-center justify-between">
							<div>
								<h4 class="text-sm font-medium text-gray-900">Mode maintenance</h4>
								<p class="text-sm text-gray-500">Désactiver temporairement l'accès public au site</p>
							</div>
							<button type="button" id="maintenanceToggle" class="bg-gray-200 relative inline-flex flex-shrink-0 h-6 w-11 border-2 border-transparent rounded-full cursor-pointer transition-colors ease-in-out duration-200 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-indigo-500">
								<span class="sr-only">Activer le mode maintenance</span>
								<span id="maintenanceToggleIcon" class="translate-x-0 pointer-events-none inline-block h-5 w-5 rounded-full bg-white shadow transform ring-0 transition ease-in-out duration-200"></span>
							</button>
						</div>

						<div class="border-t border-gray-200 pt-4">
							<h4 class="text-sm font-medium text-gray-900 mb-2">Actions administratives</h4>
							<div class="space-y-2">
								<button type="button" onclick="clearCache()" class="inline-flex items-center px-3 py-2 border border-gray-300 shadow-sm text-sm leading-4 font-medium rounded-md text-gray-700 bg-white hover:bg-gray-50 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-indigo-500">
									<i class="fas fa-trash mr-2"></i>
									Vider le cache
								</button>
								<button type="button" onclick="exportData()" class="inline-flex items-center px-3 py-2 border border-gray-300 shadow-sm text-sm leading-4 font-medium rounded-md text-gray-700 bg-white hover:bg-gray-50 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-indigo-500">
									<i class="fas fa-download mr-2"></i>
									Exporter les données
								</button>
							</div>
						</div>
					</div>
				</div>
			</div>

			<!-- Boutons d'action -->
			<div class="flex justify-end space-x-3">
				<button type="button" onclick="resetForm()" class="bg-white py-2 px-4 border border-gray-300 rounded-md shadow-sm text-sm font-medium text-gray-700 hover:bg-gray-50 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-indigo-500">
					Réinitialiser
				</button>
				<button type="submit" class="bg-indigo-600 border border-transparent rounded-md shadow-sm py-2 px-4 inline-flex justify-center text-sm font-medium text-white hover:bg-indigo-700 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-indigo-500">
					<i class="fas fa-save mr-2"></i>
					Enregistrer les modifications
				</button>
			</div>
		</form>
	</div>

	<script>
		function resetForm() {
if (confirm('Êtes-vous sûr de vouloir réinitialiser tous les paramètres ?')) {
document.querySelector('form').reset();
}
}

function clearCache() {
if (confirm('Êtes-vous sûr de vouloir vider le cache ?')) { // Ici vous pouvez ajouter l'appel API pour vider le cache
alert('Cache vidé avec succès !');
}
}

function exportData() {
if (confirm('Exporter toutes les données de l\'école ?')) { // Ici vous pouvez ajouter l'appel API pour exporter les données
alert('Export en cours... Vous recevrez un email avec le fichier.');
}
}

// Toggle pour le mode maintenance
document.getElementById('maintenanceToggle').addEventListener('click', function () {
const toggle = this;
const icon = document.getElementById('maintenanceToggleIcon');

if (toggle.classList.contains('bg-gray-200')) {
toggle.classList.remove('bg-gray-200');
toggle.classList.add('bg-red-600');
icon.classList.remove('translate-x-0');
icon.classList.add('translate-x-5');
} else {
toggle.classList.remove('bg-red-600');
toggle.classList.add('bg-gray-200');
icon.classList.remove('translate-x-5');
icon.classList.add('translate-x-0');
}
});
	</script>
{% endblock %}
