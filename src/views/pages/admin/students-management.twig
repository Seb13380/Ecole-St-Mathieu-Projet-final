{% extends "layouts/base.twig" %}

{% block title %}Gestion des √âl√®ves - √âcole Saint-Mathieu
{% endblock %}

{% block main %}
	<div class="min-h-screen bg-gradient-to-br from-green-50 to-emerald-100 p-8">
		<div
			class="max-w-7xl mx-auto">
			<!-- Header Section -->
			<div class="text-center mb-8">
				<h1 class="text-4xl font-bold text-slate-800 mb-4">
					<span class="mr-3">üë∂</span>
					Gestion des √âl√®ves
				</h1>
				<p class="text-slate-600">Ajoutez, modifiez ou supprimez les √©l√®ves</p>
			</div>

			<!-- Bouton Ajouter √âl√®ve -->
			<div class="mb-6 flex justify-center">
				<button onclick="openCreateModal()" class="bg-emerald-500 hover:bg-emerald-600 text-white font-bold py-3 px-6 rounded-lg transition-colors inline-flex items-center">
					<svg class="w-5 h-5 mr-2" fill="none" stroke="currentColor" viewbox="0 0 24 24">
						<path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 6v6m0 0v6m0-6h6m-6 0H6"></path>
					</svg>
					Ajouter un √âl√®ve
				</button>
			</div>

			<!-- Barre de recherche -->
			<div class="mb-6 flex justify-center">
				<div class="relative w-full max-w-md">
					<input type="text" id="searchStudents" placeholder="Rechercher par nom, pr√©nom, parent ou classe..." class="w-full pl-10 pr-4 py-2 border border-slate-300 rounded-lg focus:ring-2 focus:ring-emerald-500 focus:border-transparent" onkeyup="filterStudents()">
					<div class="absolute inset-y-0 left-0 pl-3 flex items-center pointer-events-none">
						<svg class="h-5 w-5 text-slate-400" fill="none" stroke="currentColor" viewbox="0 0 24 24">
							<path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M21 21l-6-6m2-5a7 7 0 11-14 0 7 7 0 0114 0z"></path>
						</svg>
					</div>
				</div>
			</div>

			<!-- Liste des √âl√®ves -->
			<div class="bg-white shadow-lg rounded-lg overflow-hidden">
				<div class="px-6 py-4 bg-slate-50 border-b border-slate-200">
					<h3 class="text-lg font-semibold text-slate-800">
						√âl√®ves inscrits ({{ eleves|length }})
					</h3>
				</div>

				{% if eleves|length > 0 %}
					<div class="overflow-x-auto">
						<table class="min-w-full divide-y divide-slate-200">
							<thead class="bg-slate-50">
								<tr>
									<th class="px-6 py-3 text-left text-xs font-medium text-slate-500 uppercase tracking-wider">√âl√®ve</th>
									<th class="px-6 py-3 text-left text-xs font-medium text-slate-500 uppercase tracking-wider">Parent</th>
									<th class="px-6 py-3 text-left text-xs font-medium text-slate-500 uppercase tracking-wider">Classe</th>
									<th class="px-6 py-3 text-left text-xs font-medium text-slate-500 uppercase tracking-wider">Inscription</th>
									<th class="px-6 py-3 text-center text-xs font-medium text-slate-500 uppercase tracking-wider">Actions</th>
								</tr>
							</thead>
							<tbody class="bg-white divide-y divide-slate-200">
								{% for eleve in eleves %}
									<tr class="hover:bg-slate-50" id="student-{{ eleve.id }}">
										<td class="px-6 py-4 whitespace-nowrap">
											<div class="flex items-center">
												<div class="bg-emerald-100 rounded-full p-2 mr-3">
													<svg class="w-5 h-5 text-emerald-600" fill="none" stroke="currentColor" viewbox="0 0 24 24">
														<path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M16 7a4 4 0 11-8 0 4 4 0 018 0zM12 14a7 7 0 00-7 7h14a7 7 0 00-7-7z"></path>
													</svg>
												</div>
												<div>
													<div class="text-sm font-medium text-slate-900">{{ eleve.firstName }}
														{{ eleve.lastName }}</div>
													<div class="text-sm text-slate-500">
														üéÇ
														{{ eleve.dateNaissance|date('d/m/Y') }}
														({{ "now"|date('Y') - eleve.dateNaissance|date('Y') }}
														ans)
													</div>
												</div>
											</div>
										</td>
										<td class="px-6 py-4 whitespace-nowrap">
											{% if eleve.parents|length > 0 %}
												{% for parentRelation in eleve.parents %}
													<div class="text-sm text-slate-900">{{ parentRelation.parent.firstName }}
														{{ parentRelation.parent.lastName }}</div>
													<div class="text-sm text-slate-500">{{ parentRelation.parent.email }}</div>
													{% if not loop.last %}<hr class="my-1">
													{% endif %}
												{% endfor %}
											{% else %}
												<div class="text-sm text-slate-500">Aucun parent</div>
											{% endif %}
										</td>
										<td class="px-6 py-4 whitespace-nowrap">
											{% if eleve.classe %}
												<span class="inline-flex items-center px-2.5 py-0.5 rounded-full text-xs font-medium bg-blue-100 text-blue-800">
													üìö
													{{ eleve.classe.nom }}
													({{ eleve.classe.niveau }})
												</span>
											{% else %}
												<span class="inline-flex items-center px-2.5 py-0.5 rounded-full text-xs font-medium bg-yellow-100 text-yellow-800">
													Aucune classe
												</span>
											{% endif %}
										</td>
										<td class="px-6 py-4 whitespace-nowrap text-sm text-slate-500">
											{{ eleve.createdAt|date('d/m/Y') }}
										</td>
										<td class="px-6 py-4 whitespace-nowrap text-center">
											<div
												class="flex justify-center space-x-2">
												<!-- Bouton Modifier -->
												<button onclick="editStudent({{ eleve.id }}, '{{ eleve.firstName }}', '{{ eleve.lastName }}', '{{ eleve.dateNaissance|date('Y-m-d') }}', {{ eleve.parents|length > 0 ? eleve.parents[0].parent.id : 'null' }}, {{ eleve.classeId ?? 'null' }})" class="text-blue-600 hover:text-blue-800 transition-colors" title="Modifier">
													<svg class="w-5 h-5" fill="none" stroke="currentColor" viewbox="0 0 24 24">
														<path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M11 5H6a2 2 0 00-2 2v11a2 2 0 002 2h11a2 2 0 002-2v-5m-1.414-9.414a2 2 0 112.828 2.828L11.828 15H9v-2.828l8.586-8.586z"></path>
													</svg>
												</button>

												<!-- Bouton Supprimer -->
												<button onclick="deleteStudent({{ eleve.id }}, '{{ eleve.firstName }} {{ eleve.lastName }}')" class="text-red-600 hover:text-red-800 transition-colors" title="Supprimer">
													<svg class="w-5 h-5" fill="none" stroke="currentColor" viewbox="0 0 24 24">
														<path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M19 7l-.867 12.142A2 2 0 0116.138 21H7.862a2 2 0 01-1.995-1.858L5 7m5 4v6m4-6v6m1-10V4a1 1 0 00-1-1h-4a1 1 0 00-1 1v3M4 7h16"></path>
													</svg>
												</button>
											</div>
										</td>
									</tr>
								{% endfor %}
							</tbody>
						</table>
					</div>
				{% else %}
					<div class="p-8 text-center">
						<div class="text-6xl mb-4">üë∂</div>
						<h3 class="text-xl font-bold text-slate-800 mb-2">Aucun √©l√®ve inscrit</h3>
						<p class="text-slate-600 mb-4">Commencez par ajouter le premier √©l√®ve.</p>
						<button onclick="openCreateModal()" class="bg-emerald-500 hover:bg-emerald-600 text-white font-bold py-2 px-4 rounded-lg">
							Ajouter le premier √©l√®ve
						</button>
					</div>
				{% endif %}
			</div>
		</div>
	</div>

	<!-- Modal Cr√©er/Modifier √âl√®ve -->
	<div id="studentModal" class="fixed inset-0 bg-black bg-opacity-60 z-50 flex items-center justify-center" style="display: none;">
		<div class="bg-white rounded-xl p-8 max-w-md mx-4 shadow-2xl border-t-4 border-emerald-500">
			<div class="flex items-center mb-6">
				<div class="bg-emerald-100 rounded-full p-3 mr-4">
					<svg class="w-6 h-6 text-emerald-600" fill="none" stroke="currentColor" viewbox="0 0 24 24">
						<path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M16 7a4 4 0 11-8 0 4 4 0 018 0zM12 14a7 7 0 00-7 7h14a7 7 0 00-7-7z"></path>
					</svg>
				</div>
				<h3 class="text-2xl font-bold text-slate-800" id="modalTitle">Ajouter un √âl√®ve</h3>
			</div>

			<form id="studentForm">
				<input type="hidden" id="studentId">

				<div class="grid grid-cols-2 gap-4 mb-4">
					<div>
						<label for="firstName" class="block text-sm font-medium text-slate-700 mb-2">Pr√©nom *</label>
						<input type="text" id="firstName" name="firstName" required class="w-full px-3 py-2 border border-slate-300 rounded-lg focus:ring-2 focus:ring-emerald-500 focus:border-transparent">
					</div>
					<div>
						<label for="lastName" class="block text-sm font-medium text-slate-700 mb-2">Nom *</label>
						<input type="text" id="lastName" name="lastName" required class="w-full px-3 py-2 border border-slate-300 rounded-lg focus:ring-2 focus:ring-emerald-500 focus:border-transparent">
					</div>
				</div>

				<div class="mb-4">
					<label for="birthDate" class="block text-sm font-medium text-slate-700 mb-2">Date de naissance *</label>
					<input type="date" id="birthDate" name="birthDate" required class="w-full px-3 py-2 border border-slate-300 rounded-lg focus:ring-2 focus:ring-emerald-500 focus:border-transparent">
				</div>

				<div class="mb-4">
					<label for="parentId" class="block text-sm font-medium text-slate-700 mb-2">Parent *</label>
					<select id="parentId" name="parentId" required class="w-full px-3 py-2 border border-slate-300 rounded-lg focus:ring-2 focus:ring-emerald-500 focus:border-transparent">
						<option value="">S√©lectionner un parent</option>
						{% for parent in parents %}
							<option value="{{ parent.id }}">{{ parent.firstName }}
								{{ parent.lastName }}
								({{ parent.email }})</option>
						{% endfor %}
					</select>
				</div>

				<div class="mb-6">
					<label for="classeId" class="block text-sm font-medium text-slate-700 mb-2">Classe (optionnel)</label>
					<select id="classeId" name="classeId" class="w-full px-3 py-2 border border-slate-300 rounded-lg focus:ring-2 focus:ring-emerald-500 focus:border-transparent">
						<option value="">Aucune classe</option>
						{% for classe in classes %}
							<option value="{{ classe.id }}">{{ classe.nom }}
								({{ classe.niveau }})</option>
						{% endfor %}
					</select>
				</div>

				<div class="flex justify-end space-x-3">
					<button type="button" onclick="closeModal()" class="px-4 py-2 text-slate-600 hover:text-slate-800 transition-colors">
						Annuler
					</button>
					<button type="submit" class="bg-emerald-500 hover:bg-emerald-600 text-white font-bold py-2 px-6 rounded-lg transition-colors">
						<span id="submitText">Cr√©er l'√âl√®ve</span>
					</button>
				</div>
			</form>
		</div>
	</div>

	<script src="/assets/js/students-management.js"></script>
{% endblock %}
