{% extends "layouts/base.twig" %}

{% block title %}Gestion des Parents - École Saint-Mathieu
{% endblock %}

{% block main %}
	<div class="min-h-screen bg-gradient-to-br from-blue-50 to-indigo-100 p-8">
		<div
			class="max-w-7xl mx-auto">
			<!-- Header Section -->
			<div class="text-center mb-8">
				<h1 class="text-4xl font-bold text-slate-800 mb-4">
					<span class="mr-3">👨‍👩‍👧‍👦</span>
					Gestion des Parents
				</h1>
				<p class="text-slate-600">Ajoutez, modifiez ou supprimez les comptes parents</p>
			</div>

			<!-- Bouton Ajouter Parent -->
			<div class="mb-6 flex justify-center">
				<button onclick="openCreateModal()" class="bg-green-500 hover:bg-green-600 text-white font-bold py-3 px-6 rounded-lg transition-colors inline-flex items-center">
					<svg class="w-5 h-5 mr-2" fill="none" stroke="currentColor" viewbox="0 0 24 24">
						<path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 6v6m0 0v6m0-6h6m-6 0H6"></path>
					</svg>
					Ajouter un Parent
				</button>
			</div>

			<!-- Barre de recherche -->
			<div class="mb-6 flex justify-center">
				<div class="relative w-full max-w-md">
					<input type="text" id="searchParents" placeholder="Rechercher par nom, prénom ou email..." class="w-full pl-10 pr-4 py-2 border border-slate-300 rounded-lg focus:ring-2 focus:ring-blue-500 focus:border-transparent" onkeyup="filterParents()">
					<div class="absolute inset-y-0 left-0 pl-3 flex items-center pointer-events-none">
						<svg class="h-5 w-5 text-slate-400" fill="none" stroke="currentColor" viewbox="0 0 24 24">
							<path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M21 21l-6-6m2-5a7 7 0 11-14 0 7 7 0 0114 0z"></path>
						</svg>
					</div>
				</div>
			</div>

			<!-- Liste des Parents -->
			<div class="bg-white shadow-lg rounded-lg overflow-hidden">
				<div class="px-6 py-4 bg-slate-50 border-b border-slate-200">
					<h3 class="text-lg font-semibold text-slate-800">
						Parents inscrits ({{ parents|length }})
					</h3>
				</div>

				{% if parents|length > 0 %}
					<div class="overflow-x-auto">
						<table class="min-w-full divide-y divide-slate-200">
							<thead class="bg-slate-50">
								<tr>
									<th class="px-6 py-3 text-left text-xs font-medium text-slate-500 uppercase tracking-wider">Parent</th>
									<th class="px-6 py-3 text-left text-xs font-medium text-slate-500 uppercase tracking-wider">Contact</th>
									<th class="px-6 py-3 text-left text-xs font-medium text-slate-500 uppercase tracking-wider">Enfants</th>
									<th class="px-6 py-3 text-left text-xs font-medium text-slate-500 uppercase tracking-wider">Inscription</th>
									<th class="px-6 py-3 text-center text-xs font-medium text-slate-500 uppercase tracking-wider">Actions</th>
								</tr>
							</thead>
							<tbody class="bg-white divide-y divide-slate-200">
								{% for parent in parents %}
									<tr class="hover:bg-slate-50" id="parent-{{ parent.id }}">
										<td class="px-6 py-4 whitespace-nowrap">
											<div class="flex items-center">
												<div class="bg-blue-100 rounded-full p-2 mr-3">
													<svg class="w-5 h-5 text-blue-600" fill="none" stroke="currentColor" viewbox="0 0 24 24">
														<path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M16 7a4 4 0 11-8 0 4 4 0 018 0zM12 14a7 7 0 00-7 7h14a7 7 0 00-7-7z"></path>
													</svg>
												</div>
												<div>
													<div class="text-sm font-medium text-slate-900">{{ parent.firstName }}
														{{ parent.lastName }}</div>
													<div class="text-sm text-slate-500">ID:
														{{ parent.id }}</div>
												</div>
											</div>
										</td>
										<td class="px-6 py-4 whitespace-nowrap">
											<div class="text-sm text-slate-900">{{ parent.email }}</div>
											{% if parent.phone %}
												<div class="text-sm text-slate-500">📞
													{{ parent.phone }}</div>
											{% endif %}
											{% if parent.adress %}
												<div class="text-sm text-slate-500">🏠
													{{ parent.adress }}</div>
											{% endif %}
										</td>
										<td class="px-6 py-4">
											{% if parent._count.enfants > 0 %}
												<span class="inline-flex items-center px-2.5 py-0.5 rounded-full text-xs font-medium bg-green-100 text-green-800">
													👶
													{{ parent._count.enfants }}
													enfant(s)
												</span>
											{% else %}
												<span class="inline-flex items-center px-2.5 py-0.5 rounded-full text-xs font-medium bg-yellow-100 text-yellow-800">
													Aucun enfant
												</span>
											{% endif %}
										</td>
										<td class="px-6 py-4 whitespace-nowrap text-sm text-slate-500">
											{{ parent.createdAt|date('d/m/Y') }}
										</td>
										<td class="px-6 py-4 whitespace-nowrap text-center">
											<div
												class="flex justify-center space-x-2">
												<!-- Bouton Modifier -->
												<button onclick="editParent({{ parent.id }}, '{{ parent.firstName }}', '{{ parent.lastName }}', '{{ parent.email }}', '{{ parent.phone }}', '{{ parent.adress }}')" class="text-blue-600 hover:text-blue-800 transition-colors" title="Modifier">
													<svg class="w-5 h-5" fill="none" stroke="currentColor" viewbox="0 0 24 24">
														<path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M11 5H6a2 2 0 00-2 2v11a2 2 0 002 2h11a2 2 0 002-2v-5m-1.414-9.414a2 2 0 112.828 2.828L11.828 15H9v-2.828l8.586-8.586z"></path>
													</svg>
												</button>

												<!-- Bouton Supprimer -->
												<button onclick="deleteParent({{ parent.id }}, '{{ parent.firstName }} {{ parent.lastName }}')" class="text-red-600 hover:text-red-800 transition-colors" title="Supprimer" {% if parent._count.enfants > 0 %} disabled {% endif %}>
													<svg class="w-5 h-5" fill="none" stroke="currentColor" viewbox="0 0 24 24">
														<path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M19 7l-.867 12.142A2 2 0 0116.138 21H7.862a2 2 0 01-1.995-1.858L5 7m5 4v6m4-6v6m1-10V4a1 1 0 00-1-1h-4a1 1 0 00-1 1v3M4 7h16"></path>
													</svg>
												</button>
											</div>
										</td>
									</tr>
								{% endfor %}
							</tbody>
						</table>
					</div>
				{% else %}
					<div class="p-8 text-center">
						<div class="text-6xl mb-4">👨‍👩‍👧‍👦</div>
						<h3 class="text-xl font-bold text-slate-800 mb-2">Aucun parent inscrit</h3>
						<p class="text-slate-600 mb-4">Commencez par ajouter le premier parent.</p>
						<button onclick="openCreateModal()" class="bg-green-500 hover:bg-green-600 text-white font-bold py-2 px-4 rounded-lg">
							Ajouter le premier parent
						</button>
					</div>
				{% endif %}
			</div>
		</div>
	</div>

	<!-- Modal Créer/Modifier Parent -->
	<div id="parentModal" class="fixed inset-0 bg-black bg-opacity-60 hidden z-50 flex items-center justify-center">
		<div class="bg-white rounded-xl p-8 max-w-md mx-4 shadow-2xl border-t-4 border-green-500">
			<div class="flex items-center mb-6">
				<div class="bg-green-100 rounded-full p-3 mr-4">
					<svg class="w-6 h-6 text-green-600" fill="none" stroke="currentColor" viewbox="0 0 24 24">
						<path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M16 7a4 4 0 11-8 0 4 4 0 018 0zM12 14a7 7 0 00-7 7h14a7 7 0 00-7-7z"></path>
					</svg>
				</div>
				<h3 class="text-2xl font-bold text-slate-800" id="modalTitle">Ajouter un Parent</h3>
			</div>

			<form id="parentForm">
				<input type="hidden" id="parentId">

				<div class="grid grid-cols-2 gap-4 mb-4">
					<div>
						<label for="firstName" class="block text-sm font-medium text-slate-700 mb-2">Prénom *</label>
						<input type="text" id="firstName" name="firstName" required class="w-full px-3 py-2 border border-slate-300 rounded-lg focus:ring-2 focus:ring-green-500 focus:border-transparent">
					</div>
					<div>
						<label for="lastName" class="block text-sm font-medium text-slate-700 mb-2">Nom *</label>
						<input type="text" id="lastName" name="lastName" required class="w-full px-3 py-2 border border-slate-300 rounded-lg focus:ring-2 focus:ring-green-500 focus:border-transparent">
					</div>
				</div>

				<div class="mb-4">
					<label for="email" class="block text-sm font-medium text-slate-700 mb-2">Email *</label>
					<input type="email" id="email" name="email" required class="w-full px-3 py-2 border border-slate-300 rounded-lg focus:ring-2 focus:ring-green-500 focus:border-transparent">
				</div>

				<div class="mb-4">
					<label for="phone" class="block text-sm font-medium text-slate-700 mb-2">Téléphone</label>
					<input type="tel" id="phone" name="phone" class="w-full px-3 py-2 border border-slate-300 rounded-lg focus:ring-2 focus:ring-green-500 focus:border-transparent">
				</div>

				<div class="mb-4">
					<label for="adress" class="block text-sm font-medium text-slate-700 mb-2">Adresse</label>
					<textarea id="adress" name="adress" rows="2" class="w-full px-3 py-2 border border-slate-300 rounded-lg focus:ring-2 focus:ring-green-500 focus:border-transparent"></textarea>
				</div>

				<div class="mb-6" style="display: none;">
					<label for="password" class="block text-sm font-medium text-slate-700 mb-2">
						<span id="passwordLabel">Mot de passe (généré automatiquement)</span>
						<span class="text-xs text-slate-500">(Un mot de passe temporaire sera envoyé par email)</span>
					</label>
					<input type="password" id="password" name="password" value="Parent2025!" readonly class="w-full px-3 py-2 border border-slate-300 rounded-lg bg-slate-100 text-slate-500">
				</div>

				<div class="flex justify-end space-x-3">
					<button type="button" onclick="closeModal()" class="px-4 py-2 text-slate-600 hover:text-slate-800 transition-colors">
						Annuler
					</button>
					<button type="submit" class="bg-green-500 hover:bg-green-600 text-white font-bold py-2 px-6 rounded-lg transition-colors">
						<span id="submitText">Créer le Parent</span>
					</button>
				</div>
			</form>
		</div>
	</div>

	<script src="/assets/js/parents-management.js"></script>
{% endblock %}
