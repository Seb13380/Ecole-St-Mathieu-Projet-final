{% extends "layouts/base.twig" %}

{% block main %}
<div class="min-h-screen bg-gradient-to-br from-slate-50 to-blue-50">
    <div class="max-w-7xl mx-auto px-4 py-8">
        
        <!-- En-t√™te -->
        <div class="mb-8">
            <div class="bg-white rounded-2xl shadow-sm border border-slate-200 p-6">
                <h1 class="text-3xl font-bold text-slate-800 mb-2">
                    üè´ Organisation Scolaire & Niveaux
                </h1>
                <p class="text-slate-600">Gestion des classes et organisation des √©l√®ves par niveau</p>
                
                <!-- Bouton Nouvelle Classe -->
                <div class="mt-4">
                    <button onclick="openCreateModal()" class="bg-blue-600 hover:bg-blue-700 text-white px-4 py-2 rounded-lg font-medium transition-colors">
                        <span class="mr-2">‚ûï</span>
                        Nouvelle Classe
                    </button>
                </div>
            </div>
        </div>

        <!-- Statistiques -->
        <div class="grid grid-cols-1 md:grid-cols-4 gap-6 mb-8">
            <div class="bg-white rounded-xl shadow-sm border border-slate-200 p-6">
                <div class="flex items-center">
                    <div class="bg-blue-100 p-3 rounded-lg mr-4">
                        <svg class="h-6 w-6 text-blue-600" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M19 21V5a2 2 0 00-2-2H7a2 2 0 00-2 2v16m14 0h2m-2 0h-5m-9 0H3m2 0h5M9 7h1m-1 4h1m4-4h1m-1 4h1m-5 10v-5a1 1 0 011-1h2a1 1 0 011 1v5m-4 0h4"/>
                        </svg>
                    </div>
                    <div>
                        <p class="text-sm font-medium text-slate-500">Total Classes</p>
                        <p class="text-2xl font-bold text-slate-800">{{ classes|length }}</p>
                    </div>
                </div>
            </div>
            
            <div class="bg-white rounded-xl shadow-sm border border-slate-200 p-6">
                <div class="flex items-center">
                    <div class="bg-green-100 p-3 rounded-lg mr-4">
                        <svg class="h-6 w-6 text-green-600" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M16 7a4 4 0 11-8 0 4 4 0 018 0zM12 14a7 7 0 00-7 7h14a7 7 0 00-7-7z"/>
                        </svg>
                    </div>
                    <div>
                        <p class="text-sm font-medium text-slate-500">Total √âl√®ves</p>
                        <p class="text-2xl font-bold text-slate-800">
                            {% set totalEleves = 0 %}
                            {% for classe in classes %}
                                {% set totalEleves = totalEleves + classe._count.eleves %}
                            {% endfor %}
                            {{ totalEleves }}
                        </p>
                    </div>
                </div>
            </div>
            
            <div class="bg-white rounded-xl shadow-sm border border-slate-200 p-6">
                <div class="flex items-center">
                    <div class="bg-purple-100 p-3 rounded-lg mr-4">
                        <svg class="h-6 w-6 text-purple-600" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 6.253v13m0-13C10.832 5.477 9.246 5 7.5 5S4.168 5.477 3 6.253v13C4.168 18.477 5.754 18 7.5 18s3.332.477 4.5 1.253m0-13C13.168 5.477 14.754 5 16.5 5c1.747 0 3.332.477 4.5 1.253v13C19.832 18.477 18.247 18 16.5 18c-1.746 0-3.332.477-4.5 1.253"/>
                        </svg>
                    </div>
                    <div>
                        <p class="text-sm font-medium text-slate-500">Niveaux</p>
                        <p class="text-2xl font-bold text-slate-800">
                            {% set niveaux = [] %}
                            {% for classe in classes %}
                                {% if classe.niveau not in niveaux %}
                                    {% set niveaux = niveaux|merge([classe.niveau]) %}
                                {% endif %}
                            {% endfor %}
                            {{ niveaux|length }}
                        </p>
                    </div>
                </div>
            </div>
            
            <div class="bg-white rounded-xl shadow-sm border border-slate-200 p-6">
                <div class="flex items-center">
                    <div class="bg-orange-100 p-3 rounded-lg mr-4">
                        <svg class="h-6 w-6 text-orange-600" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 19v-6a2 2 0 00-2-2H5a2 2 0 00-2 2v6a2 2 0 002 2h2a2 2 0 002-2zm0 0V9a2 2 0 012-2h2a2 2 0 012 2v10m-6 0a2 2 0 002 2h2a2 2 0 002-2m0 0V5a2 2 0 012-2h2a2 2 0 012 2v14a2 2 0 01-2 2h-2a2 2 0 01-2-2z"/>
                        </svg>
                    </div>
                    <div>
                        <p class="text-sm font-medium text-slate-500">Moyenne/Classe</p>
                        <p class="text-2xl font-bold text-slate-800">
                            {% if classes|length > 0 %}
                                {{ (totalEleves / classes|length)|round(1) }}
                            {% else %}
                                0
                            {% endif %}
                        </p>
                    </div>
                </div>
            </div>
        </div>

        <!-- Liste des Classes -->
        <div class="bg-white rounded-2xl shadow-sm border border-slate-200">
            <div class="p-6 border-b border-slate-200">
                <h2 class="text-xl font-bold text-slate-800">Classes & Niveaux</h2>
                <p class="text-slate-600 mt-1">Organisation par niveau scolaire</p>
            </div>
            
            <div class="p-6">
                {% if classes|length > 0 %}
                    <div class="space-y-4">
                        {% for classe in classes %}
                            <div class="border border-slate-200 rounded-lg p-4 hover:shadow-md transition-shadow">
                                <div class="flex items-center justify-between">
                                    <div class="flex items-center space-x-4">
                                        <div class="bg-blue-100 p-2 rounded-lg">
                                            <svg class="h-5 w-5 text-blue-600" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                                                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M19 21V5a2 2 0 00-2-2H7a2 2 0 00-2 2v16m14 0h2m-2 0h-5m-9 0H3m2 0h5M9 7h1m-1 4h1m4-4h1m-1 4h1m-5 10v-5a1 1 0 011-1h2a1 1 0 011 1v5m-4 0h4"/>
                                            </svg>
                                        </div>
                                        <div>
                                            <h3 class="font-semibold text-slate-800">{{ classe.nom }}</h3>
                                            <p class="text-sm text-slate-600">{{ classe.niveau }} ‚Ä¢ Ann√©e {{ classe.anneeScolaire }}</p>
                                        </div>
                                    </div>
                                    
                                    <div class="flex items-center space-x-4">
                                        <div class="text-center">
                                            <p class="text-sm font-medium text-slate-500">√âl√®ves</p>
                                            <p class="text-lg font-bold text-blue-600">{{ classe._count.eleves }}</p>
                                        </div>
                                        
                                        <div class="flex space-x-2">
                                            <button onclick="viewStudents({{ classe.id }})" class="text-blue-600 hover:text-blue-800 p-2 rounded-lg hover:bg-blue-50 transition-colors" title="Voir les √©l√®ves">
                                                <svg class="h-4 w-4" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                                                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15 12a3 3 0 11-6 0 3 3 0 016 0z"/>
                                                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M2.458 12C3.732 7.943 7.523 5 12 5c4.478 0 8.268 2.943 9.542 7-1.274 4.057-5.064 7-9.542 7-4.477 0-8.268-2.943-9.542-7z"/>
                                                </svg>
                                            </button>
                                            <button onclick="editClasse({{ classe.id }}, '{{ classe.nom }}', '{{ classe.niveau }}', '{{ classe.anneeScolaire }}')" class="text-amber-600 hover:text-amber-800 p-2 rounded-lg hover:bg-amber-50 transition-colors" title="Modifier">
                                                <svg class="h-4 w-4" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                                                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M11 5H6a2 2 0 00-2 2v11a2 2 0 002 2h11a2 2 0 002-2v-5m-1.414-9.414a2 2 0 112.828 2.828L11.828 15H9v-2.828l8.586-8.586z"/>
                                                </svg>
                                            </button>
                                            <button onclick="exportClassList({{ classe.id }})" class="text-green-600 hover:text-green-800 p-2 rounded-lg hover:bg-green-50 transition-colors" title="Exporter liste">
                                                <svg class="h-4 w-4" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                                                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 10v6m0 0l-3-3m3 3l3-3m2 8H7a2 2 0 01-2-2V5a2 2 0 012-2h5.586a1 1 0 01.707.293l5.414 5.414a1 1 0 01.293.707V19a2 2 0 01-2 2z"/>
                                                </svg>
                                            </button>
                                            <button onclick="deleteClasse({{ classe.id }}, '{{ classe.nom }}')" class="text-red-600 hover:text-red-800 p-2 rounded-lg hover:bg-red-50 transition-colors" title="Supprimer">
                                                <svg class="h-4 w-4" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                                                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M19 7l-.867 12.142A2 2 0 0116.138 21H7.862a2 2 0 01-1.995-1.858L5 7m5 4v6m4-6v6m1-10V4a1 1 0 00-1-1h-4a1 1 0 00-1 1v3M4 7h16"/>
                                                </svg>
                                            </button>
                                        </div>
                                    </div>
                                </div>
                                
                                <!-- Liste des √©l√®ves (collapsible) -->
                                <div id="students-{{ classe.id }}" class="hidden mt-4 pt-4 border-t border-slate-200">
                                    <h4 class="font-medium text-slate-700 mb-3">√âl√®ves de cette classe :</h4>
                                    {% if classe.eleves|length > 0 %}
                                        <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-2">
                                            {% for student in classe.eleves %}
                                                <div class="flex items-center space-x-2 text-sm">
                                                    <div class="w-2 h-2 bg-blue-400 rounded-full"></div>
                                                    <span>{{ student.firstName }} {{ student.lastName }}</span>
                                                </div>
                                            {% endfor %}
                                        </div>
                                    {% else %}
                                        <p class="text-slate-500 text-sm italic">Aucun √©l√®ve inscrit dans cette classe</p>
                                    {% endif %}
                                </div>
                            </div>
                        {% endfor %}
                    </div>
                {% else %}
                    <div class="text-center py-12">
                        <div class="bg-slate-100 p-6 rounded-full w-20 h-20 mx-auto mb-4 flex items-center justify-center">
                            <svg class="h-10 w-10 text-slate-400" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M19 21V5a2 2 0 00-2-2H7a2 2 0 00-2 2v16m14 0h2m-2 0h-5m-9 0H3m2 0h5M9 7h1m-1 4h1m4-4h1m-1 4h1m-5 10v-5a1 1 0 011-1h2a1 1 0 011 1v5m-4 0h4"/>
                            </svg>
                        </div>
                        <h3 class="text-lg font-medium text-slate-800 mb-2">Aucune classe cr√©√©e</h3>
                        <p class="text-slate-600 mb-4">Commencez par cr√©er votre premi√®re classe pour organiser vos √©l√®ves</p>
                        <button onclick="openCreateModal()" class="bg-blue-600 hover:bg-blue-700 text-white px-6 py-3 rounded-lg font-medium transition-colors">
                            Cr√©er ma premi√®re classe
                        </button>
                    </div>
                {% endif %}
            </div>
        </div>
    </div>
</div>

<!-- Modal Cr√©ation/√âdition Classe -->
<div id="classeModal" class="fixed inset-0 bg-black bg-opacity-50 hidden z-50">
    <div class="flex items-center justify-center min-h-screen p-4">
        <div class="bg-white rounded-2xl shadow-2xl max-w-md w-full">
            <div class="p-6 border-b border-slate-200">
                <h3 id="modalTitle" class="text-xl font-bold text-slate-800">Nouvelle Classe</h3>
            </div>
            
            <form id="classeForm" method="POST">
                <div class="p-6 space-y-4">
                    <div>
                        <label class="block text-sm font-medium text-slate-700 mb-2">Nom de la classe</label>
                        <input type="text" id="nom" name="nom" required class="w-full px-3 py-2 border border-slate-300 rounded-lg focus:ring-2 focus:ring-blue-500 focus:border-blue-500" placeholder="Ex: CP-A, CE1-B, CM2">
                    </div>
                    
                    <div>
                        <label class="block text-sm font-medium text-slate-700 mb-2">Niveau</label>
                        <select id="niveau" name="niveau" required class="w-full px-3 py-2 border border-slate-300 rounded-lg focus:ring-2 focus:ring-blue-500 focus:border-blue-500">
                            <option value="">S√©lectionner un niveau</option>
                            <option value="PS">PS - Petite Section</option>
                            <option value="MS">MS - Moyenne Section</option>
                            <option value="GS">GS - Grande Section</option>
                            <option value="CP">CP</option>
                            <option value="CE1">CE1</option>
                            <option value="CE2">CE2</option>
                            <option value="CM1">CM1</option>
                            <option value="CM2">CM2</option>
                        </select>
                    </div>
                    
                    <div>
                        <label class="block text-sm font-medium text-slate-700 mb-2">Ann√©e scolaire</label>
                        <input type="text" id="anneeScolaire" name="anneeScolaire" required class="w-full px-3 py-2 border border-slate-300 rounded-lg focus:ring-2 focus:ring-blue-500 focus:border-blue-500" value="2025-2026">
                    </div>
                </div>
                
                <div class="p-6 border-t border-slate-200 flex justify-end space-x-3">
                    <button type="button" onclick="closeModal()" class="px-4 py-2 text-slate-600 hover:text-slate-800 font-medium">
                        Annuler
                    </button>
                    <button type="submit" class="bg-blue-600 hover:bg-blue-700 text-white px-6 py-2 rounded-lg font-medium transition-colors">
                        <span id="submitText">Cr√©er</span>
                    </button>
                </div>
            </form>
        </div>
    </div>
</div>

<script>
let isEditMode = false;
let editingId = null;

function openCreateModal() {
    document.getElementById('modalTitle').textContent = 'Nouvelle Classe';
    document.getElementById('submitText').textContent = 'Cr√©er';
    document.getElementById('classeForm').action = '/directeur/classes';
    document.getElementById('nom').value = '';
    document.getElementById('niveau').value = '';
    document.getElementById('anneeScolaire').value = '2025-2026';
    isEditMode = false;
    editingId = null;
    document.getElementById('classeModal').classList.remove('hidden');
}

function editClasse(id, nom, niveau, anneeScolaire) {
    document.getElementById('modalTitle').textContent = 'Modifier la Classe';
    document.getElementById('submitText').textContent = 'Modifier';
    document.getElementById('classeForm').action = `/directeur/classes/${id}/update`;
    document.getElementById('nom').value = nom;
    document.getElementById('niveau').value = niveau;
    document.getElementById('anneeScolaire').value = anneeScolaire;
    isEditMode = true;
    editingId = id;
    document.getElementById('classeModal').classList.remove('hidden');
}

function closeModal() {
    document.getElementById('classeModal').classList.add('hidden');
}

function deleteClasse(id, nom) {
    if (confirm(`√ätes-vous s√ªr de vouloir supprimer la classe "${nom}" ?`)) {
        const form = document.createElement('form');
        form.method = 'POST';
        form.action = `/directeur/classes/${id}/delete`;
        document.body.appendChild(form);
        form.submit();
    }
}

function viewStudents(classeId) {
    const studentsDiv = document.getElementById(`students-${classeId}`);
    studentsDiv.classList.toggle('hidden');
}

function exportClassList(classeId) {
    // Ouvrir dans un nouvel onglet la liste d'export
    window.open(`/directeur/classes/${classeId}/export`, '_blank');
}

// Fermer modal en cliquant √† l'ext√©rieur
document.getElementById('classeModal').addEventListener('click', function(e) {
    if (e.target === this) {
        closeModal();
    }
});
</script>

{% endblock %}
