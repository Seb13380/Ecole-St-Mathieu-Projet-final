{% extends "layouts/base.twig" %}

{% block main %}
	<div class="min-h-screen bg-gradient-to-br from-slate-50 to-blue-50">
		<div
			class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8 py-8">

			<!-- En-tête moderne -->
			<div class="mb-8">
				<div class="bg-white rounded-2xl shadow-sm border border-slate-200 p-8">
					<div class="text-center">
						<h1 class="text-4xl font-bold text-slate-800 mb-2">
							🏫 Gestionnaire de l'École
						</h1>
						<p class="text-xl text-slate-600">
							Bienvenue,
							<span class="font-semibold text-blue-600">{{ user.firstName }}
								{{ user.lastName }}</span>
						</p>
						<p class="text-sm text-slate-500 mt-1">Gestionnaire - École Saint-Mathieu</p>
						<div class="text-3xl mt-4">⚙️</div>
						<p class="text-sm text-slate-500">Tableau de bord</p>
					</div>
				</div>
			</div>

			<!-- Statistiques principales -->
			<div class="mb-8">
				<h2 class="text-2xl font-bold text-slate-800 mb-6 text-center flex items-center justify-center">
					<span class="mr-3">📊</span>
					Statistiques Principales
				</h2>
				<div class="flex flex-wrap justify-center gap-6">
					<div class="bg-white shadow-md border-l-4 border-blue-500 p-6 hover:shadow-xl transition-all duration-300 text-center w-64 h-48">
						<div class="flex flex-col items-center h-full justify-center">
							<div class="bg-blue-100 p-3 mb-4">
								<svg class="h-8 w-8 text-blue-600" fill="none" viewbox="0 0 24 24" stroke="currentColor">
									<path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 4.354a4 4 0 110 5.292M15 21H3v-1a6 6 0 0112 0v1zm0 0h6v-1a6 6 0 00-9-5.197m13.5-9a2.5 2.5 0 11-5 0 2.5 2.5 0 015 0z"/>
								</svg>
							</div>
							<p class="text-sm font-medium text-slate-500">Personnel Total</p>
							<p class="text-3xl font-bold text-slate-800">{{ stats.totalUsers }}</p>
							<p class="text-xs text-green-600">👥 Actifs</p>
						</div>
					</div>

					<div class="bg-white shadow-md border-l-4 border-green-500 p-6 hover:shadow-xl transition-all duration-300 text-center w-64 h-48">
						<div class="flex flex-col items-center h-full justify-center">
							<div class="bg-green-100 p-3 mb-4">
								<svg class="h-8 w-8 text-green-600" fill="none" viewbox="0 0 24 24" stroke="currentColor">
									<path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M16 7a4 4 0 11-8 0 4 4 0 018 0zM12 14a7 7 0 00-7 7h14a7 7 0 00-7-7z"/>
								</svg>
							</div>
							<p class="text-sm font-medium text-slate-500">Élèves Inscrits</p>
							<p class="text-3xl font-bold text-slate-800">{{ stats.totalStudents }}</p>
							<p class="text-xs text-green-600">👶 Scolarisés</p>
						</div>
					</div>

					<div class="bg-white shadow-md border-l-4 border-amber-500 p-6 hover:shadow-xl transition-all duration-300 text-center w-64 h-48">
						<div class="flex flex-col items-center h-full justify-center">
							<div class="bg-amber-100 p-3 mb-4">
								<svg class="h-8 w-8 text-amber-600" fill="none" viewbox="0 0 24 24" stroke="currentColor">
									<path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M19 21V5a2 2 0 00-2-2H7a2 2 0 00-2 2v16m14 0h2m-2 0h-5m-9 0H3m2 0h5M9 7h1m-1 4h1m4-4h1m-1 4h1m-5 10v-5a1 1 0 011-1h2a1 1 0 011 1v5m-4 0h4"/>
								</svg>
							</div>
							<p class="text-sm font-medium text-slate-500">Classes Actives</p>
							<p class="text-3xl font-bold text-slate-800">{{ stats.totalClasses }}</p>
							<p class="text-xs text-green-600">🏫 Organisées</p>
						</div>
					</div>

					<div class="bg-white shadow-md border-l-4 border-purple-500 p-6 hover:shadow-xl transition-all duration-300 text-center w-64 h-48">
						<div class="flex flex-col items-center h-full justify-center">
							<div class="bg-purple-100 p-3 mb-4">
								<svg class="h-8 w-8 text-purple-600" fill="none" viewbox="0 0 24 24" stroke="currentColor">
									<path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M8 12h.01M12 12h.01M16 12h.01M21 12c0 4.418-4.03 8-9 8a9.863 9.863 0 01-4.255-.949L3 20l1.395-3.72C3.512 15.042 3 13.574 3 12c0-4.418 4.03-8 9-8s9 3.582 9 8z"/>
								</svg>
							</div>
							<p class="text-sm font-medium text-slate-500">Messages</p>
							<p class="text-3xl font-bold text-slate-800">{{ stats.totalMessages }}</p>
							<p class="text-xs text-blue-600">💬 Communications</p>
						</div>
					</div>

					<div class="bg-white shadow-md border-l-4 border-red-500 p-6 hover:shadow-xl transition-all duration-300 text-center w-64 h-48">
						<div class="flex flex-col items-center h-full justify-center">
							<div class="bg-red-100 p-3 mb-4">
								<svg class="h-8 w-8 text-red-600" fill="none" viewbox="0 0 24 24" stroke="currentColor">
									<path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M11 5.882V19.24a1.76 1.76 0 01-3.417.592l-2.147-6.15M18 13a3 3 0 100-6M5.436 13.683A4.001 4.001 0 017 6h1.832c4.1 0 7.625-1.234 9.168-3v14c-1.543-1.766-5.067-3-9.168-3H7a3.988 3.988 0 01-1.564-.317z"/>
								</svg>
							</div>
							<p class="text-sm font-medium text-slate-500">Actualités</p>
							<p class="text-3xl font-bold text-slate-800">{{ stats.totalActualites }}</p>
							<p class="text-xs text-red-600">📢 Publiées</p>
						</div>
					</div>
				</div>
			</div>

			<!-- Actions de gestion -->
			<div class="mb-8">
				<h2 class="text-2xl font-bold text-slate-800 mb-6 text-center flex items-center justify-center">
					<span class="mr-3">⚡</span>
					Actions de Gestion
				</h2>
				<div class="flex flex-wrap justify-center gap-6">
					<a href="/admin/classes" class="group bg-white shadow-md border-l-4 border-amber-500 p-6 hover:shadow-xl hover:border-amber-600 transition-all duration-300 text-center w-64 h-48">
						<div class="flex flex-col items-center h-full justify-center">
							<div class="bg-amber-100 p-3 group-hover:bg-amber-200 transition-colors mb-4">
								<svg class="h-8 w-8 text-amber-600" fill="none" viewbox="0 0 24 24" stroke="currentColor">
									<path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M19 21V5a2 2 0 00-2-2H7a2 2 0 00-2 2v16m14 0h2m-2 0h-5m-9 0H3m2 0h5M9 7h1m-1 4h1m4-4h1m-1 4h1m-5 10v-5a1 1 0 011-1h2a1 1 0 011 1v5m-4 0h4"/>
								</svg>
							</div>
							<h3 class="text-lg font-bold text-slate-800 mb-2">Organisation Scolaire</h3>
							<p class="text-slate-600 text-sm">Classes & emplois du temps</p>
						</div>
					</a>

					<a href="/documents/admin" class="group bg-white shadow-md border-l-4 border-cyan-500 p-6 hover:shadow-xl hover:border-cyan-600 transition-all duration-300 text-center w-64 h-48">
						<div class="flex flex-col items-center h-full justify-center">
							<div class="bg-cyan-100 p-3 group-hover:bg-cyan-200 transition-colors mb-4">
								<svg class="h-8 w-8 text-cyan-600" fill="none" viewbox="0 0 24 24" stroke="currentColor">
									<path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 12h6m-6 4h6m2 5H7a2 2 0 01-2-2V5a2 2 0 012-2h5.586a1 1 0 01.707.293l5.414 5.414a1 1 0 01.293.707V19a2 2 0 01-2 2z"/>
								</svg>
							</div>
							<h3 class="text-lg font-bold text-slate-800 mb-2">Documents Officiels</h3>
							<p class="text-slate-600 text-sm">École & Pastorale</p>
						</div>
					</a>

					<a href="/actualites/manage" class="group bg-white shadow-md border-l-4 border-red-500 p-6 hover:shadow-xl hover:border-red-600 transition-all duration-300 text-center w-64 h-48">
						<div class="flex flex-col items-center h-full justify-center">
							<div class="bg-red-100 p-3 group-hover:bg-red-200 transition-colors mb-4">
								<svg class="h-8 w-8 text-red-600" fill="none" viewbox="0 0 24 24" stroke="currentColor">
									<path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15.232 5.232l3.536 3.536m-2.036-5.036a2.5 2.5 0 113.536 3.536L6.5 21.036H3v-3.572L16.732 3.732z"/>
								</svg>
							</div>
							<h3 class="text-lg font-bold text-slate-800 mb-2">Communication</h3>
							<p class="text-slate-600 text-sm">Actualités & annonces</p>
						</div>
					</a>

					<a href="/travaux/manage" class="group bg-white shadow-md border-l-4 border-orange-500 p-6 hover:shadow-xl hover:border-orange-600 transition-all duration-300 text-center w-64 h-48">
						<div class="flex flex-col items-center h-full justify-center">
							<div class="bg-orange-100 p-3 group-hover:bg-orange-200 transition-colors mb-4">
								<svg class="h-8 w-8 text-orange-600" fill="none" viewbox="0 0 24 24" stroke="currentColor">
									<path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M8 9l3 3-3 3m13 0h-6m-4 0L5 21V3l8 8"/>
								</svg>
							</div>
							<h3 class="text-lg font-bold text-slate-800 mb-2">Gestion Travaux</h3>
							<p class="text-slate-600 text-sm">Projets & rénovations</p>
						</div>
					</a>

					<a href="/admin/menus-pdf" class="group bg-white shadow-md border-l-4 border-slate-500 p-6 hover:shadow-xl hover:border-slate-600 transition-all duration-300 text-center w-64 h-48">
						<div class="flex flex-col items-center h-full justify-center">
							<div class="bg-slate-100 p-3 group-hover:bg-slate-200 transition-colors mb-4">
								<svg class="h-8 w-8 text-slate-600" fill="none" viewbox="0 0 24 24" stroke="currentColor">
									<path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 12h6m-6 4h6m2 5H7a2 2 0 01-2-2V5a2 2 0 012-2h5.586a1 1 0 01.707.293l5.414 5.414a1 1 0 01.293.707V19a2 2 0 01-2 2z"/>
								</svg>
							</div>
							<h3 class="text-lg font-bold text-slate-800 mb-2">Gestion Menus</h3>
							<p class="text-slate-600 text-sm">Menus cantine</p>
						</div>
					</a>

					<a href="/admin/contact-messages" class="group bg-white shadow-md border-l-4 border-purple-500 p-6 hover:shadow-xl hover:border-purple-600 transition-all duration-300 text-center w-64 h-48">
						<div class="flex flex-col items-center h-full justify-center">
							<div class="bg-purple-100 p-3 group-hover:bg-purple-200 transition-colors mb-4">
								<svg class="h-8 w-8 text-purple-600" fill="none" viewbox="0 0 24 24" stroke="currentColor">
									<path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M3 8l7.89 4.26a2 2 0 002.22 0L21 8M5 19h14a2 2 0 002-2V7a2 2 0 00-2-2H5a2 2 0 00-2 2v10a2 2 0 002 2z"/>
								</svg>
							</div>
							<h3 class="text-lg font-bold text-slate-800 mb-2">Messages Parents</h3>
							<p class="text-slate-600 text-sm">Contact & demandes</p>
						</div>
					</a>

					<a href="/admin/reports" class="group bg-white shadow-md border-l-4 border-indigo-500 p-6 hover:shadow-xl hover:border-indigo-600 transition-all duration-300 text-center w-64 h-48">
						<div class="flex flex-col items-center h-full justify-center">
							<div class="bg-indigo-100 p-3 group-hover:bg-indigo-200 transition-colors mb-4">
								<svg class="h-8 w-8 text-indigo-600" fill="none" viewbox="0 0 24 24" stroke="currentColor">
									<path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 19v-6a2 2 0 00-2-2H5a2 2 0 00-2 2v6a2 2 0 002 2h2a2 2 0 002-2zm0 0V9a2 2 0 012-2h2a2 2 0 012 2v10m-6 0a2 2 0 002 2h2a2 2 0 002-2m0 0V5a2 2 0 012-2h2a2 2 0 012 2v14a2 2 0 01-2 2h-2a2 2 0 01-2-2z"/>
								</svg>
							</div>
							<h3 class="text-lg font-bold text-slate-800 mb-2">Rapports</h3>
							<p class="text-slate-600 text-sm">Statistiques & bilans</p>
						</div>
					</a>

					<a href="/carousel/manage" class="group bg-white shadow-md border-l-4 border-green-500 p-6 hover:shadow-xl hover:border-green-600 transition-all duration-300 text-center w-64 h-48">
						<div class="flex flex-col items-center h-full justify-center">
							<div class="bg-green-100 p-3 group-hover:bg-green-200 transition-colors mb-4">
								<svg class="h-8 w-8 text-green-600" fill="none" viewbox="0 0 24 24" stroke="currentColor">
									<path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M4 16l4.586-4.586a2 2 0 012.828 0L16 16m-2-2l1.586-1.586a2 2 0 012.828 0L20 14m-6-6h.01M6 20h12a2 2 0 002-2V6a2 2 0 00-2-2H6a2 2 0 00-2 2v12a2 2 0 002 2z"/>
								</svg>
							</div>
							<h3 class="text-lg font-bold text-slate-800 mb-2">Petit Carousel</h3>
							<p class="text-slate-600 text-sm">Images actualités</p>
						</div>
					</a>

					<a href="/hero-carousel/management" class="group bg-white shadow-md border-l-4 border-teal-500 p-6 hover:shadow-xl hover:border-teal-600 transition-all duration-300 text-center w-64 h-48">
						<div class="flex flex-col items-center h-full justify-center">
							<div class="bg-teal-100 p-3 group-hover:bg-teal-200 transition-colors mb-4">
								<svg class="h-8 w-8 text-teal-600" fill="none" viewbox="0 0 24 24" stroke="currentColor">
									<path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M4 16l4.586-4.586a2 2 0 012.828 0L16 16m-2-2l1.586-1.586a2 2 0 012.828 0L20 14m-6-6h.01M6 20h12a2 2 0 002-2V6a2 2 0 00-2-2H6a2 2 0 00-2 2v12a2 2 0 002 2z"/>
								</svg>
							</div>
							<h3 class="text-lg font-bold text-slate-800 mb-2">Grand Carousel</h3>
							<p class="text-slate-600 text-sm">Images principales</p>
						</div>
					</a>

					<a href="/user-management/parents" class="group bg-white shadow-md border-l-4 border-emerald-500 p-6 hover:shadow-xl hover:border-emerald-600 transition-all duration-300 text-center w-64 h-48">
						<div class="flex flex-col items-center h-full justify-center">
							<div class="bg-emerald-100 p-3 group-hover:bg-emerald-200 transition-colors mb-4">
								<svg class="h-8 w-8 text-emerald-600" fill="none" viewbox="0 0 24 24" stroke="currentColor">
									<path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M16 7a4 4 0 11-8 0 4 4 0 018 0zM12 14a7 7 0 00-7 7h14a7 7 0 00-7-7z"/>
								</svg>
							</div>
							<h3 class="text-lg font-bold text-slate-800 mb-2">👨‍👩‍👧‍👦 Gestion Parents</h3>
							<p class="text-slate-600 text-sm">Ajouter, modifier, supprimer</p>
						</div>
					</a>

					<a href="/user-management/students" class="group bg-white shadow-md border-l-4 border-cyan-500 p-6 hover:shadow-xl hover:border-cyan-600 transition-all duration-300 text-center w-64 h-48">
						<div class="flex flex-col items-center h-full justify-center">
							<div class="bg-cyan-100 p-3 group-hover:bg-cyan-200 transition-colors mb-4">
								<svg class="h-8 w-8 text-cyan-600" fill="none" viewbox="0 0 24 24" stroke="currentColor">
									<path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M16 7a4 4 0 11-8 0 4 4 0 018 0zM12 14a7 7 0 00-7 7h14a7 7 0 00-7-7z"/>
								</svg>
							</div>
							<h3 class="text-lg font-bold text-slate-800 mb-2">👶 Gestion Élèves</h3>
							<p class="text-slate-600 text-sm">Ajouter, modifier, supprimer</p>
						</div>
					</a>
				</div>
			</div>

			<!-- Informations Récentes -->
			<div class="mb-8">
				<h2 class="text-2xl font-bold text-slate-800 mb-6 text-center flex items-center justify-center">
					<span class="mr-3">📋</span>
					Informations Récentes
				</h2>

				<!-- Actualités récentes -->
				{% if recentActualites|length > 0 %}
					<div class="mb-8">
						<h3 class="text-xl font-bold text-slate-700 mb-4 text-center">
							📰 Dernières Actualités Publiées
						</h3>
						<div class="grid gap-4 max-w-4xl mx-auto">
							{% for actualite in recentActualites %}
								<div class="bg-white shadow-md border-l-4 {{ actualite.important ? 'border-red-500' : 'border-blue-500' }} p-4 hover:shadow-lg transition-all duration-300">
									<div class="flex justify-between items-start">
										<div class="flex-1">
											<div class="flex items-center mb-2">
												<h4 class="text-lg font-bold text-slate-800">{{ actualite.titre }}</h4>
												{% if actualite.important %}
													<span class="ml-2 bg-red-100 text-red-800 px-2 py-1 text-xs font-medium rounded">
														� IMPORTANT
													</span>
												{% endif %}
											</div>
											<p class="text-slate-600 text-sm mb-2 line-clamp-2">{{ actualite.contenu }}</p>
											<div class="text-xs text-slate-500">
												Par
												{{ actualite.auteur.firstName }}
												{{ actualite.auteur.lastName }}
												-
												{{ actualite.datePublication|date('d/m/Y à H:i') }}
											</div>
										</div>
										<a href="/actualites/manage" class="ml-4 text-blue-600 hover:text-blue-800 text-sm font-medium">
											Gérer →
										</a>
									</div>
								</div>
							{% endfor %}
						</div>
					</div>
				{% endif %}

				<!-- Autres informations récentes -->
				{% if recentUsers|length > 0 or recentMessages|length > 0 %}
					<div class="flex flex-wrap justify-center gap-6">
						{% if recentUsers|length > 0 %}
							{% for user in recentUsers %}
								<div class="bg-white shadow-md border-l-4 border-blue-500 p-6 hover:shadow-xl transition-all duration-300 text-center w-64 h-48">
									<div class="flex flex-col items-center h-full justify-center">
										<div class="flex items-center justify-between w-full mb-4">
											<div class="bg-blue-100 p-3">
												<svg class="h-8 w-8 text-blue-600" fill="none" viewbox="0 0 24 24" stroke="currentColor">
													<path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M16 7a4 4 0 11-8 0 4 4 0 018 0zM12 14a7 7 0 00-7 7h14a7 7 0 00-7-7z"/>
												</svg>
											</div>
											<span class="inline-flex items-center px-2.5 py-0.5 text-xs font-medium bg-green-100 text-green-800">
												Nouveau
											</span>
										</div>
										<h3 class="text-lg font-bold text-slate-800 mb-2">{{ user.firstName }}
											{{ user.lastName }}</h3>
										<p class="text-slate-600 text-sm mb-2">{{ user.email }}</p>
										<div class="flex items-center justify-between w-full">
											<span class="inline-flex items-center px-2.5 py-0.5 text-xs font-medium bg-blue-100 text-blue-800">
												{{ user.role }}
											</span>
											<p class="text-xs text-slate-500">{{ user.createdAt|date('d/m/Y') }}</p>
										</div>
									</div>
								</div>
							{% endfor %}
						{% endif %}

						{% if recentMessages|length > 0 %}
							{% for message in recentMessages %}
								<div class="bg-white shadow-md border-l-4 border-purple-500 p-6 hover:shadow-xl hover:border-purple-600 transition-all duration-300 text-center w-64 h-48">
									<div class="flex flex-col items-center h-full justify-center">
										<div class="flex items-center justify-between w-full mb-4">
											<div class="bg-purple-100 p-3">
												<svg class="h-8 w-8 text-purple-600" fill="none" viewbox="0 0 24 24" stroke="currentColor">
													<path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M3 8l7.89 4.26a2 2 0 002.22 0L21 8M5 19h14a2 2 0 002-2V7a2 2 0 00-2-2H5a2 2 0 00-2 2v10a2 2 0 002 2z"/>
												</svg>
											</div>
											<span class="inline-flex items-center px-2 py-1 text-xs font-medium bg-red-100 text-red-800">
												Non traité
											</span>
										</div>
										<h3 class="text-lg font-bold text-slate-800 mb-2">{{ message.nom }}</h3>
										<p class="text-slate-600 text-sm mb-2 line-clamp-2">{{ message.sujet }}</p>
										<p class="text-xs text-slate-500 mb-3">{{ message.email }}</p>
										<div class="flex items-center justify-between w-full">
											<a href="/admin/contact-messages" class="text-purple-600 hover:text-purple-800 text-sm font-medium">
												Traiter →
											</a>
											<p class="text-xs text-slate-500">{{ message.createdAt|date('d/m/Y') }}</p>
										</div>
									</div>
								</div>
							{% endfor %}
						{% endif %}
					</div>
				{% else %}
					{% if recentActualites|length == 0 %}
						<div class="text-center py-12">
							<div class="bg-white shadow-md border-l-4 border-gray-300 p-8 max-w-md mx-auto">
