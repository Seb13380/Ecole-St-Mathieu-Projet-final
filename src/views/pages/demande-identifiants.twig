{% extends "layouts/base.twig" %}

{% block title %}
	{{ title }}
{% endblock %}

{% block main %}
	<div class="min-h-screen bg-gradient-to-br from-blue-100 via-white to-blue-50 demande-identifiants-form">
		<div
			class="container mx-auto px-4 py-8">

			{# En-tête #}
			<div class="text-center mb-8">
				<h1 class="text-2xl md:text-3xl font-bold text-gray-800 mb-3">
					🔑 Demande d'identifiants de connexion
				</h1>
				<p class="text-base text-gray-600 max-w-2xl mx-auto">
					Vous avez déjà un compte parent mais vous avez oublié vos identifiants ? 
									                Remplissez ce formulaire pour recevoir vos nouveaux codes d'accès.
				</p>
			</div>
			{# Messages #}
			{% if message %}
				<div class="max-w-md mx-auto mb-8">
					<div class="bg-green-100 border border-green-400 text-green-700 px-4 py-3 rounded-lg shadow-sm">
						<div class="flex items-center">
							<svg class="w-5 h-5 mr-2" fill="currentColor" viewbox="0 0 20 20">
								<path fill-rule="evenodd" d="M10 18a8 8 0 100-16 8 8 0 000 16zm3.707-9.293a1 1 0 00-1.414-1.414L9 10.586 7.707 9.293a1 1 0 00-1.414 1.414l2 2a1 1 0 001.414 0l4-4z" clip-rule="evenodd"></path>
							</svg>
							{{ message }}
						</div>
					</div>
				</div>
			{% endif %}

			{% if error %}
				<div class="max-w-md mx-auto mb-8">
					<div class="bg-red-100 border border-red-400 text-red-700 px-4 py-3 rounded-lg shadow-sm">
						<div class="flex items-center">
							<svg class="w-5 h-5 mr-2" fill="currentColor" viewbox="0 0 20 20">
								<path fill-rule="evenodd" d="M10 18a8 8 0 100-16 8 8 0 000 16zM8.707 7.293a1 1 0 00-1.414 1.414L8.586 10l-1.293 1.293a1 1 0 101.414 1.414L10 11.414l1.293 1.293a1 1 0 001.414-1.414L11.414 10l1.293-1.293a1 1 0 00-1.414-1.414L10 8.586 8.707 7.293z" clip-rule="evenodd"></path>
							</svg>
							{{ error }}
						</div>
					</div>
				</div>
			{% endif %}

			{# Formulaire #}
			<div class="max-w-md mx-auto">
				<div class="bg-white rounded-2xl shadow-xl p-8 border border-gray-100">

					<div class="text-center mb-4">
						<div class="w-12 h-12 bg-gradient-to-r from-blue-500 to-blue-700 rounded-full flex items-center justify-center mx-auto mb-3">
							<svg class="w-6 h-6 text-white" fill="none" stroke="currentColor" viewbox="0 0 24 24">
								<path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15 7a2 2 0 012 2m0 0a2 2 0 012 2v6a2 2 0 01-2 2H9a2 2 0 01-2-2V9a2 2 0 012-2m0 0V7a2 2 0 012-2m0 0a2 2 0 012-2h2a2 2 0 012 2v2m0 0a2 2 0 012 2v6a2 2 0 01-2 2H9a2 2 0 01-2-2V9a2 2 0 012-2"></path>
							</svg>
						</div>
						<h2 class="text-lg font-semibold text-gray-800">
							Récupération d'identifiants
						</h2>
						<p class="text-sm text-gray-600 mt-1">
							Saisissez vos informations pour recevoir vos nouveaux identifiants
						</p>
					</div>
					<form
						method="POST" action="/demande-identifiants" class="space-y-4">

						{# Email #}
						<div>
							<label for="email" class="block text-sm font-medium text-gray-700 mb-1">
								📧 Adresse email *
							</label>
							<input type="email" id="email" name="email" required class="w-full px-3 py-2 border border-gray-300 rounded-lg focus:ring-2 focus:ring-blue-500 focus:border-transparent transition duration-200" placeholder="votre.email@exemple.com">
						</div>

						{# Prénom #}
						<div>
							<label for="firstName" class="block text-sm font-medium text-gray-700 mb-1">
								👤 Prénom *
							</label>
							<input type="text" id="firstName" name="firstName" required class="w-full px-3 py-2 border border-gray-300 rounded-lg focus:ring-2 focus:ring-blue-500 focus:border-transparent transition duration-200" placeholder="Jean">
						</div>

						{# Nom #}
						<div>
							<label for="lastName" class="block text-sm font-medium text-gray-700 mb-1">
								👤 Nom *
							</label>
							<input type="text" id="lastName" name="lastName" required class="w-full px-3 py-2 border border-gray-300 rounded-lg focus:ring-2 focus:ring-blue-500 focus:border-transparent transition duration-200" placeholder="Dupont">
						</div>

						{# Téléphone (optionnel) #}
						<div>
							<label for="phone" class="block text-sm font-medium text-gray-700 mb-1">
								📱 Téléphone (optionnel)
							</label>
							<input type="tel" id="phone" name="phone" class="w-full px-3 py-2 border border-gray-300 rounded-lg focus:ring-2 focus:ring-blue-500 focus:border-transparent transition duration-200" placeholder="06.12.34.56.78">
						</div>

						{# Bouton #}
						<button type="submit" class="w-full bg-gradient-to-r from-blue-500 to-blue-700 text-white font-semibold py-2 px-4 rounded-lg hover:from-blue-600 hover:to-blue-800 transform hover:scale-105 transition duration-200 shadow-lg">
							🔑 Recevoir mes identifiants
						</button>
					</form>

					{# Informations importantes #}
					<div class="mt-8 p-4 bg-blue-50 rounded-lg border border-blue-200">
						<h3 class="text-sm font-medium text-blue-800 mb-2">
							ℹ️ Informations importantes
						</h3>
						<ul class="text-xs text-blue-700 space-y-1">
							<li>• Vos identifiants seront envoyés par email</li>
							<li>• Vous devrez changer le mot de passe temporaire</li>
							<li>• Vérifiez vos spams si vous ne recevez rien</li>
							<li>• En cas de problème, contactez l'école</li>
						</ul>
					</div>

				</div>
			</div>

			{# Liens utiles #}
			<div class="text-center mt-8">
				<div class="space-y-2">
					<a href="/auth/login" class="inline-block text-blue-600 hover:text-blue-800 transition duration-200">
						← Retour à la connexion
					</a>
					<br>
					<a href="/auth/register" class="inline-block text-gray-600 hover:text-gray-800 transition duration-200 text-sm">
						Pas encore de compte ? Demander une inscription
					</a>
				</div>
			</div>

		</div>
	</div>
{% endblock %}
