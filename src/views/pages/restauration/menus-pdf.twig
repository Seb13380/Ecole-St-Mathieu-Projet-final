{% extends "layouts/base.twig" %}

{% block title %}Menu de la semaine - École Saint-Mathieu
{% endblock %}

{% block main %}
	<div
		class="container mx-auto px-4 py-8">
		<!-- En-tête simplifié -->
		<div class="text-center mb-8">
			<h1 class="text-4xl font-bold text-gray-800 mb-4">
				<i class="fas fa-chef-hat text-orange-500 mr-3"></i>
				Le chef Serge vous propose
			</h1>
		</div>
		{% if menu %}
			<!-- Affichage du PDF directement -->
			<div class="max-w-7xl mx-auto">
				<div
					class="bg-white rounded-lg shadow-lg overflow-hidden">
					<!-- En-tête avec lien de téléchargement -->
					<div class="bg-orange-50 p-4 border-b flex justify-between items-center">
						<h2 class="text-lg font-semibold text-gray-800">Menu de la semaine</h2>
						<a href="{{ menu.pdfUrl }}" target="_blank" class="inline-flex items-center px-4 py-2 bg-orange-500 text-white text-sm font-medium rounded hover:bg-orange-600 transition duration-300">
							<i class="fas fa-download mr-2"></i>
							Télécharger
						</a>
					</div>

					<!-- Affichage du PDF intégré -->
					<div class="p-4">
						<embed
						src="{{ menu.pdfUrl }}" type="application/pdf" width="100%" height="800px" class="rounded border">

						<!-- Message de fallback si le PDF ne s'affiche pas -->
						<div class="mt-4 text-center">
							<p class="text-gray-600 text-sm">Le PDF ne s'affiche pas ?
								<a href="{{ menu.pdfUrl }}" target="_blank" class="text-orange-500 hover:text-orange-600 underline">
									Cliquez ici pour l'ouvrir dans un nouvel onglet
								</a>
							</p>
						</div>
					</div>
				</div>
			</div>

		{% else %}
			<!-- Aucun menu actif -->
			<div class="max-w-2xl mx-auto text-center">
				<div class="bg-white rounded-lg shadow-lg p-8">
					<i class="fas fa-chef-hat text-gray-300 text-6xl mb-4"></i>
					<h2 class="text-2xl font-bold text-gray-800 mb-4">Aucun menu disponible</h2>
					<p class="text-gray-600">
						Le menu de la semaine sera bientôt disponible.
					</p>
				</div>
			</div>
		{% endif %}
	</div>
{% endblock %}
