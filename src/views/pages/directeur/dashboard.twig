{% extends "layouts/base.twig" %}

{% block main %}
	<div class="min-h-screen bg-gradient-to-br from-blue-50 to-indigo-100">
		<div
			class="max-w-7xl mx-auto px-6 py-8">

			<!-- En-tête du directeur -->
			<div class="bg-white rounded-3xl shadow-lg border-2 border-[#a7e3dd] p-8 mb-8">
				<div class="flex items-center justify-between">
					<div class="flex items-center space-x-6">
						<div class="bg-[#a7e3dd] rounded-full p-4">
							<svg class="h-12 w-12 text-[#304a4d]" fill="none" viewbox="0 0 24 24" stroke="currentColor">
								<path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M19 21V5a2 2 0 00-2-2H7a2 2 0 00-2 2v16m14 0h2m-2 0h-5m-9 0H3m2 0h5M9 7h1m-1 4h1m4-4h1m-1 4h1m-5 10v-5a1 1 0 011-1h2a1 1 0 011 1v5m-4 0h4"/>
							</svg>
						</div>
						<div>
							<h1 class="text-4xl font-bold text-[#304a4d] mb-2">
								Tableau de Bord Direction
							</h1>
							<p class="text-xl text-gray-600">
								Bienvenue
								<span class="font-bold text-[#304a4d]">{{ user.firstName }}
									{{ user.lastName }}</span>
							</p>
							<p class="text-sm text-gray-500">Directeur de l'École Saint-Mathieu</p>
						</div>
					</div>
					<div class="text-right hidden lg:block">
						<div class="text-6xl mb-2">🏫</div>
						<p class="text-gray-500 font-medium">Direction</p>
					</div>
				</div>
			</div>

			<!-- Statistiques Rapides -->
			<div class="grid grid-cols-2 md:grid-cols-4 gap-6 mb-8">
				<div class="bg-white rounded-2xl shadow-md border border-blue-200 p-6 text-center hover:shadow-lg transition-all">
					<div class="text-4xl mb-3">👥</div>
					<div class="text-3xl font-bold text-blue-600 mb-1">{{ stats.totalUsers }}</div>
					<div class="text-sm text-gray-600">Personnel</div>
				</div>
				<div class="bg-white rounded-2xl shadow-md border border-green-200 p-6 text-center hover:shadow-lg transition-all">
					<div class="text-4xl mb-3">🎓</div>
					<div class="text-3xl font-bold text-green-600 mb-1">{{ stats.totalStudents }}</div>
					<div class="text-sm text-gray-600">Élèves</div>
				</div>
				<div class="bg-white rounded-2xl shadow-md border border-orange-200 p-6 text-center hover:shadow-lg transition-all">
					<div class="text-4xl mb-3">🏛️</div>
					<div class="text-3xl font-bold text-orange-600 mb-1">{{ stats.totalClasses }}</div>
					<div class="text-sm text-gray-600">Classes</div>
				</div>
				<div class="bg-white rounded-2xl shadow-md border border-purple-200 p-6 text-center hover:shadow-lg transition-all">
					<div class="text-4xl mb-3">💬</div>
					<div class="text-3xl font-bold text-purple-600 mb-1">{{ stats.totalMessages }}</div>
					<div class="text-sm text-gray-600">Messages</div>
				</div>
			</div>

			<!-- GESTION DU PERSONNEL -->
			<div class="mb-8">
				<h2 class="text-2xl font-bold text-[#304a4d] mb-6 flex items-center">
					<span class="bg-blue-100 rounded-full p-2 mr-3">👥</span>
					Gestion du Personnel
				</h2>
				<div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-6">
					<a href="/parent-invitations/manage" class="group bg-white rounded-2xl shadow-md border-l-4 border-teal-500 p-6 hover:shadow-xl transition-all duration-300">
						<div class="flex items-center justify-between mb-4">
							<div class="bg-teal-100 rounded-xl p-3">
								<svg class="h-8 w-8 text-teal-600" fill="none" viewbox="0 0 24 24" stroke="currentColor">
									<path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M3 8l7.89 7.89a2 2 0 002.83 0L21 8M5 19h14a2 2 0 002-2V7a2 2 0 00-2-2H5a2 2 0 00-2 2v10a2 2 0 002 2z"/>
								</svg>
							</div>
							<span class="text-2xl">📧</span>
						</div>
						<h3 class="text-xl font-bold text-gray-800 mb-2">Invitations Parents</h3>
						<p class="text-gray-600 mb-4">Inviter de nouveaux parents à rejoindre la plateforme</p>
						<div class="text-teal-600 font-medium group-hover:text-teal-800">
							Gérer les invitations →
						</div>
					</a>

					<a href="/admin/users" class="group bg-white rounded-2xl shadow-md border-l-4 border-blue-500 p-6 hover:shadow-xl transition-all duration-300">
						<div class="flex items-center justify-between mb-4">
							<div class="bg-blue-100 rounded-xl p-3">
								<svg class="h-8 w-8 text-blue-600" fill="none" viewbox="0 0 24 24" stroke="currentColor">
									<path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M17 20h5v-2a3 3 0 00-5.356-1.857M17 20H7m10 0v-2c0-.656-.126-1.283-.356-1.857M7 20H2v-2a3 3 0 015.356-1.857M7 20v-2c0-.656.126-1.283.356-1.857m0 0a5.002 5.002 0 019.288 0M15 7a3 3 0 11-6 0 3 3 0 016 0zm6 3a2 2 0 11-4 0 2 2 0 014 0zM7 10a2 2 0 11-4 0 2 2 0 014 0z"/>
								</svg>
							</div>
							<span class="text-2xl">👨‍🏫</span>
						</div>
						<h3 class="text-xl font-bold text-gray-800 mb-2">Personnel École</h3>
						<p class="text-gray-600 mb-4">Gestion des enseignants et staff administratif</p>
						<div class="text-blue-600 font-medium group-hover:text-blue-800">
							Gérer le personnel →
						</div>
					</a>

					<a href="/admin/students" class="group bg-white rounded-2xl shadow-md border-l-4 border-green-500 p-6 hover:shadow-xl transition-all duration-300">
						<div class="flex items-center justify-between mb-4">
							<div class="bg-green-100 rounded-xl p-3">
								<svg class="h-8 w-8 text-green-600" fill="none" viewbox="0 0 24 24" stroke="currentColor">
									<path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 6.253v13m0-13C10.832 5.477 9.246 5 7.5 5S4.168 5.477 3 6.253v13C4.168 18.477 5.754 18 7.5 18s3.332.477 4.5 1.253m0-13C13.168 5.477 14.754 5 16.5 5c1.747 0 3.332.477 4.5 1.253v13C19.832 18.477 18.247 18 16.5 18c-1.746 0-3.332.477-4.5 1.253"/>
								</svg>
							</div>
							<span class="text-2xl">👶</span>
						</div>
						<h3 class="text-xl font-bold text-gray-800 mb-2">Suivi Élèves</h3>
						<p class="text-gray-600 mb-4">Gestion des élèves et suivi pédagogique</p>
						<div class="text-green-600 font-medium group-hover:text-green-800">
							Suivre les élèves →
						</div>
					</a>
				</div>
			</div>

			<!-- ORGANISATION SCOLAIRE -->
			<div class="mb-8">
				<h2 class="text-2xl font-bold text-[#304a4d] mb-6 flex items-center">
					<span class="bg-orange-100 rounded-full p-2 mr-3">🏛️</span>
					Organisation Scolaire
				</h2>
				<div class="grid grid-cols-1 md:grid-cols-2 gap-6">
					<a href="/admin/classes" class="group bg-white rounded-2xl shadow-md border-l-4 border-amber-500 p-6 hover:shadow-xl transition-all duration-300">
						<div class="flex items-center justify-between mb-4">
							<div class="bg-amber-100 rounded-xl p-3">
								<svg class="h-8 w-8 text-amber-600" fill="none" viewbox="0 0 24 24" stroke="currentColor">
									<path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M19 21V5a2 2 0 00-2-2H7a2 2 0 00-2 2v16m14 0h2m-2 0h-5m-9 0H3m2 0h5M9 7h1m-1 4h1m4-4h1m-1 4h1m-5 10v-5a1 1 0 011-1h2a1 1 0 011 1v5m-4 0h4"/>
								</svg>
							</div>
							<span class="text-2xl">📚</span>
						</div>
						<h3 class="text-xl font-bold text-gray-800 mb-2">Gestion des Classes</h3>
						<p class="text-gray-600 mb-4">Organisation des classes et emplois du temps</p>
						<div class="text-amber-600 font-medium group-hover:text-amber-800">
							Organiser les classes →
						</div>
					</a>

					<a href="/restauration/menus" class="group bg-white rounded-2xl shadow-md border-l-4 border-orange-500 p-6 hover:shadow-xl transition-all duration-300">
						<div class="flex items-center justify-between mb-4">
							<div class="bg-orange-100 rounded-xl p-3">
								<svg class="h-8 w-8 text-orange-600" fill="none" viewbox="0 0 24 24" stroke="currentColor">
									<path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 12h6m-6 4h6m2 5H7a2 2 0 01-2-2V5a2 2 0 012-2h5.586a1 1 0 01.707.293l5.414 5.414a1 1 0 01.293.707V19a2 2 0 01-2 2z"/>
								</svg>
							</div>
							<span class="text-2xl">🍽️</span>
						</div>
						<h3 class="text-xl font-bold text-gray-800 mb-2">Menus Cantine</h3>
						<p class="text-gray-600 mb-4">Gestion des menus de la restauration scolaire</p>
						<div class="text-orange-600 font-medium group-hover:text-orange-800">
							Gérer les menus →
						</div>
					</a>
				</div>
			</div>

			<!-- COMMUNICATION -->
			<div class="mb-8">
				<h2 class="text-2xl font-bold text-[#304a4d] mb-6 flex items-center">
					<span class="bg-red-100 rounded-full p-2 mr-3">📢</span>
					Communication
				</h2>
				<div class="grid grid-cols-1 md:grid-cols-2 gap-6">
					<a href="/actualites/manage" class="group bg-white rounded-2xl shadow-md border-l-4 border-red-500 p-6 hover:shadow-xl transition-all duration-300">
						<div class="flex items-center justify-between mb-4">
							<div class="bg-red-100 rounded-xl p-3">
								<svg class="h-8 w-8 text-red-600" fill="none" viewbox="0 0 24 24" stroke="currentColor">
									<path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15.232 5.232l3.536 3.536m-2.036-5.036a2.5 2.5 0 113.536 3.536L6.5 21.036H3v-3.572L16.732 3.732z"/>
								</svg>
							</div>
							<span class="text-2xl">📰</span>
						</div>
						<h3 class="text-xl font-bold text-gray-800 mb-2">Actualités</h3>
						<p class="text-gray-600 mb-4">Gestion des actualités et annonces de l'école</p>
						<div class="text-red-600 font-medium group-hover:text-red-800">
							Gérer les actualités →
						</div>
					</a>

					<a href="/admin/contact-messages" class="group bg-white rounded-2xl shadow-md border-l-4 border-purple-500 p-6 hover:shadow-xl transition-all duration-300">
						<div class="flex items-center justify-between mb-4">
							<div class="bg-purple-100 rounded-xl p-3">
								<svg class="h-8 w-8 text-purple-600" fill="none" viewbox="0 0 24 24" stroke="currentColor">
									<path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M3 8l7.89 4.26a2 2 0 002.22 0L21 8M5 19h14a2 2 0 002-2V7a2 2 0 00-2-2H5a2 2 0 00-2 2v10a2 2 0 002 2z"/>
								</svg>
							</div>
							<span class="text-2xl">💬</span>
						</div>
						<h3 class="text-xl font-bold text-gray-800 mb-2">Messages Parents</h3>
						<p class="text-gray-600 mb-4">Messages et demandes des familles</p>
						<div class="text-purple-600 font-medium group-hover:text-purple-800">
							Voir les messages →
						</div>
					</a>
				</div>
			</div>

			<!-- OUTILS ADMINISTRATION -->
			<div class="mb-8">
				<h2 class="text-2xl font-bold text-[#304a4d] mb-6 flex items-center">
					<span class="bg-gray-100 rounded-full p-2 mr-3">⚙️</span>
					Outils d'Administration
				</h2>
				<div class="grid grid-cols-1 md:grid-cols-3 gap-6">
					<a href="/admin/reports" class="group bg-white rounded-2xl shadow-md border-l-4 border-indigo-500 p-6 hover:shadow-xl transition-all duration-300">
						<div class="flex items-center justify-between mb-4">
							<div class="bg-indigo-100 rounded-xl p-3">
								<svg class="h-8 w-8 text-indigo-600" fill="none" viewbox="0 0 24 24" stroke="currentColor">
									<path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 19v-6a2 2 0 00-2-2H5a2 2 0 00-2 2v6a2 2 0 002 2h2a2 2 0 002-2zm0 0V9a2 2 0 012-2h2a2 2 0 012 2v10m-6 0a2 2 0 002 2h2a2 2 0 002-2m0 0V5a2 2 0 012-2h2a2 2 0 012 2v14a2 2 0 01-2 2h-2a2 2 0 01-2-2z"/>
								</svg>
							</div>
							<span class="text-2xl">📊</span>
						</div>
						<h3 class="text-lg font-bold text-gray-800 mb-2">Rapports</h3>
						<p class="text-gray-600 text-sm mb-4">Statistiques et bilans</p>
						<div class="text-indigo-600 font-medium group-hover:text-indigo-800 text-sm">
							Voir les rapports →
						</div>
					</a>

					<a href="/admin/settings" class="group bg-white rounded-2xl shadow-md border-l-4 border-gray-500 p-6 hover:shadow-xl transition-all duration-300">
						<div class="flex items-center justify-between mb-4">
							<div class="bg-gray-100 rounded-xl p-3">
								<svg class="h-8 w-8 text-gray-600" fill="none" viewbox="0 0 24 24" stroke="currentColor">
									<path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M10.325 4.317c.426-1.756 2.924-1.756 3.35 0a1.724 1.724 0 002.573 1.066c1.543-.94 3.31.826 2.37 2.37a1.724 1.724 0 001.065 2.572c1.756.426 1.756 2.924 0 3.35a1.724 1.724 0 00-1.066 2.573c.94 1.543-.826 3.31-2.37 2.37a1.724 1.724 0 00-2.572 1.065c-.426 1.756-2.924 1.756-3.35 0a1.724 1.724 0 00-2.573-1.066c-1.543.94-3.31-.826-2.37-2.37a1.724 1.724 0 00-1.065-2.572c-1.756-.426-1.756-2.924 0-3.35a1.724 1.724 0 001.066-2.573c-.94-1.543.826-3.31 2.37-2.37.996.608 2.296.07 2.572-1.065z"/>
									<path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15 12a3 3 0 11-6 0 3 3 0 016 0z"/>
								</svg>
							</div>
							<span class="text-2xl">⚙️</span>
						</div>
						<h3 class="text-lg font-bold text-gray-800 mb-2">Paramètres</h3>
						<p class="text-gray-600 text-sm mb-4">Configuration système</p>
						<div class="text-gray-600 font-medium group-hover:text-gray-800 text-sm">
							Configurer →
						</div>
					</a>

					<a href="/profile" class="group bg-white rounded-2xl shadow-md border-l-4 border-slate-500 p-6 hover:shadow-xl transition-all duration-300">
						<div class="flex items-center justify-between mb-4">
							<div class="bg-slate-100 rounded-xl p-3">
								<svg class="h-8 w-8 text-slate-600" fill="none" viewbox="0 0 24 24" stroke="currentColor">
									<path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M16 7a4 4 0 11-8 0 4 4 0 018 0zM12 14a7 7 0 00-7 7h14a7 7 0 00-7-7z"/>
								</svg>
							</div>
							<span class="text-2xl">👤</span>
						</div>
						<h3 class="text-lg font-bold text-gray-800 mb-2">Mon Profil</h3>
						<p class="text-gray-600 text-sm mb-4">Informations personnelles</p>
						<div class="text-slate-600 font-medium group-hover:text-slate-800 text-sm">
							Modifier le profil →
						</div>
					</a>
				</div>
			</div>

			<!-- Activité Récente -->
			<div class="grid grid-cols-1 lg:grid-cols-2 gap-8">
				{% if recentUsers|length > 0 %}
					<div class="bg-white rounded-2xl shadow-md border border-gray-200 p-6">
						<div class="flex items-center justify-between mb-6">
							<h3 class="text-xl font-bold text-gray-800 flex items-center">
								<span class="bg-blue-100 rounded-full p-2 mr-3">👥</span>
								Nouveaux Utilisateurs
							</h3>
							<a href="/admin/users" class="text-blue-600 hover:text-blue-800 text-sm font-medium">
								Voir tous →
							</a>
						</div>
						<div class="space-y-4">
							{% for user in recentUsers %}
								<div class="flex items-center justify-between p-4 bg-gray-50 rounded-xl">
									<div>
										<p class="font-bold text-gray-800">{{ user.firstName }}
											{{ user.lastName }}</p>
										<p class="text-sm text-gray-600">{{ user.email }}</p>
									</div>
									<div class="text-right">
										<span class="inline-flex items-center px-3 py-1 rounded-full text-xs font-medium bg-blue-100 text-blue-800">
											{{ user.role }}
										</span>
										<p class="text-xs text-gray-500 mt-1">{{ user.createdAt|date('d/m/Y') }}</p>
									</div>
								</div>
							{% endfor %}
						</div>
					</div>
				{% endif %}

				{% if recentMessages|length > 0 %}
					<div class="bg-white rounded-2xl shadow-md border border-gray-200 p-6">
						<div class="flex items-center justify-between mb-6">
							<h3 class="text-xl font-bold text-gray-800 flex items-center">
								<span class="bg-purple-100 rounded-full p-2 mr-3">📧</span>
								Messages Récents
							</h3>
							<a href="/admin/contact-messages" class="text-purple-600 hover:text-purple-800 text-sm font-medium">
								Voir tous →
							</a>
						</div>
						<div class="space-y-4">
							{% for message in recentMessages %}
								<div class="p-4 bg-gray-50 rounded-xl">
									<div class="flex items-start justify-between">
										<div class="flex-1">
											<p class="font-bold text-gray-800">{{ message.nom }}</p>
											<p class="text-sm text-gray-600 mb-1">{{ message.sujet }}</p>
											<p class="text-xs text-gray-500">{{ message.email }}</p>
										</div>
										<div class="text-right ml-4">
											<span class="inline-flex items-center px-2 py-1 rounded-full text-xs font-medium bg-red-100 text-red-800">
												Non traité
											</span>
											<p class="text-xs text-gray-500 mt-1">{{ message.createdAt|date('d/m/Y') }}</p>
										</div>
									</div>
								</div>
							{% endfor %}
						</div>
					</div>
				{% endif %}
			</div>
		</div>
	</div>
{% endblock %}
